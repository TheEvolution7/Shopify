          </div>
          
<!--           <h3>{{ product.title}}</h3> -->
                    <div class="room-fearures  table table-bordered">
          		<h3 class="subtitle wow fadeInLeft" data-wow-delay=".1s">Description</h3>
          {{ product.description}}
          </div>
          <div class="room-fearures clearfix mt-60 mb-60">
            <h3 class="subtitle wow fadeInUp">Key Features</h3>
            <ul class="room-fearures-list">
              {% section 'template-bed-king-size-black-leather' %}
            </ul>
          </div>
          <div class="dimensions-chart room-fearures clearfix mt-60 mb-60">
            <h3 class="subtitle wow fadeInLeft" data-wow-delay=".1s">Size</h3>
            <table class="wow fadeInRight" data-wow-delay=".4s">
              <thead>
                <tr>
                  <th>Mattress Size</th>
                  <th>Albi beds</th>
                  <th>Normal beds</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td class="colum-1">Full</td>
                  <td>54" X 75"</td>
                  <td>134.5 X 190.5cm</td>
                </tr>
                <tr>
                  <td class="colum-1">King</td>
                  <td>76" X 80"</td>
                  <td>193 X 203.5cm</td>
                </tr>
                <tr>
                  <td class="colum-1">Queen</td>
                  <td>60" X 80"</td>
                  <td>152 X 203.5cm</td>
                </tr>
                <tr>
                  <td class="colum-1">Twin</td>
                  <td>38" X 75"</td>
                  <td>96.5 X 188.0cm</td>
                </tr>
                <tr>
                  <td class="colum-1">Small Single</td>
                  <td>30" X 75"</td>
                  <td>76.2 X 190.5cm</td>
                </tr>
              </tbody>
            </table>
          </div>

