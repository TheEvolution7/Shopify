      <div class="col-lg-8 order-1 order-lg-0">
        <div class="deatils-box">
          
          <div class="thumb">
            <div class="room-details-slider">
              {% for media in product.media %}
              	<div>
                  <div class="thumb-item">
                    <img src="{{ media.preview_image | img_url: 'master' }}" alt="{{ thumbnailAlt }}">
                  </div>
                </div>
              {% endfor %}
            </div>
            <div class="room-details-slider-nav">
              {% for media in product.media %}
              	<div>
                  <div class="thumb-item">
                    <img src="{{ media.preview_image | img_url: '110x110', scale: 2 }}" alt="{{ thumbnailAlt }}">
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
          <div class="title-wrap">
            <div class="title">
              <div class="room-cat">
                Fabric beds
              </div>
              <h2>{{ product.title}}</h2>
            </div>
<!--             <div class="price">
              <div class="price-day">From <span>$1000</span></div>
