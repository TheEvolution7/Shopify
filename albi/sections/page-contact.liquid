  {
    "name": "About",
    "settings": [
		{
         "type": "text",
         "id": "title_1",
         "label": "Title 1"
      	},
        {
        "id": "image_1",
        "type": "image_picker",
        "label": "Image"
        },
		{
         "type": "text",
         "id": "title_2",
         "label": "Title 2"
      	},
		{
         "type": "text",
         "id": "title_3",
         "label": "Title 3"
      	},
		{
         "type": "text",
         "id": "title_4",
         "label": "Title 4"
      	},
		{
         "type": "text",
         "id": "title_5",
         "label": "Title 5"
      	}
	]
  }
{% endschema %}