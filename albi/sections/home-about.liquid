<section class="about-section">
  <div class="container">
<!--     <div class="down-arrow-wrap text-center">
      <a href="{{ section.settings.url }}" class="down-arrow"><i class="fal fa-arrow-down"></i></a>
    </div> -->
    <div class="parallax-container js-text-parallax">
      <div class="fx-wrap" data-x="200">
        <h3 class="fx-target">{{ section.settings.title_1 }}</h3>
      </div>
    </div>
    <div class="section-title about-title text-center mb-20">
      <span class="title-tag wow fadeInUp">{{ section.settings.title_2 }} <span></span></span>
      <h2 class=" wow fadeInUp">{{ section.settings.title_3 }}</h2>
    </div>
    <ul class="about-features masonry-layout">
      {% for block in section.blocks %}
      	<li class=" wow fadeInUp" data-wow-delay=".3s">
          <a href="#">
            <i class="thumb-icon" style="-webkit-mask-image: url({{ block.settings.image | img_url: '300x' }});"></i>
            <i class="hover-icon thumb-icon" style="-webkit-mask-image: url({{ block.settings.image | img_url: '120x' }});"></i>
            <span class="title">{{ block.settings.title }}</span>
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>
{% schema %}
  {
    "name": "About",
	"blocks": [
      {
        "type": "quote",
        "name": "Features",
        "settings": [
          {
            "id": "title",
            "type": "text",
            "label": "Title"
          },
		  {
            "id": "image",
            "type": "image_picker",
            "label": "Image"
          },
		  {
            "id": "url",
            "type": "url",
            "label": "Url"
          }
        ]
      }
    ],
    "settings": [
		{
         "type": "text",
         "id": "title_1",
         "label": "Title 1"
      	},
	  	{
         "type": "text",
         "id": "title_2",
         "label": "Title 2"
      	},
	  	{
         "type": "text",
         "id": "title_3",
         "label": "Title 3"
      	},
		{
        "id": "url",
        "type": "url",
        "label": "Url"
        }
	],
	"presets": [
    {
      "name": "Home About",
      "category": "Home"
    }
]
  }
{% endschema %}

