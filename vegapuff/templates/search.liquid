{% paginate search.results by 12 %}
  <!-- Start Shop Minimal Area -->
  <div class="brook-shop-minimal ptb--60 bg_color--1">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 col-xl-12">

          <div class="archive-shop-actions mb--30">
            <div class="row align-items-center">
              <div class="col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="archive-shop-inner text-center text-sm-left">
                  <p class="bk_pra">{{ 'general.search.heading' | t: count: search.results_count }}: {{ 'general.search.results_with_count' | t: terms: search.terms, count: search.results_count }}</p>
                </div>
              </div>
            </div>
          </div>
          <!-- Start Shop Minimal Product -->
          <div class="shop-minimal-product">
            <div class="row row--25">
              {% if search.results_count == 0 %}
               <div class="col-lg-12">
                  <p style="text-align:center;">{{ 'general.search.empty_search_message' | t }}</p>
              </div>
              {%- endif -%}
             {% for item in search.results %} 
                {% if item.object_type == 'product'  %}
                  {% include 'product-card-list', product: item %}
                {% endif %}
              {% endfor %}
              <!-- Start Pagenation Area -->
              <div class="col-lg-12">
                <div class="brook-pagination-wrapper text-center pt--80">
                  {%- if paginate.pages > 1 -%}
                      {% include 'pagination', paginate: paginate %}
                  {%- endif -%}
                </div>
              </div>
              <!-- End Pagenation Area -->
            </div>
          </div>
          <!-- End Shop Minimal Product -->
        </div>
      </div>
    </div>
  </div>
  <!-- End Shop Minimal Area -->
{% endpaginate %}
