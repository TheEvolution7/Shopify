{% if section.settings.show_section %}
  <div class="box-vega" data-section-id="{{ section.id }}">
    <div class="container">
      <div class="row about--creative">
        <div class="col-lg-6">
          <div class="box-img-ani">
            <img class="bg-ani" src="{{ section.settings.image-bg | img_url : 'master' }}" alt="">
            <img class="box-sp" src="{{ section.settings.image | img_url : 'master' }}" alt="{{ section.settings.heading }}">
            <div class="box-icon">
              <div class="icon __1" style="-webkit-mask-image: url({{ section.settings.image-icon-1 | img_url : 'master' }});"></div>
              <div class="icon __1" style="-webkit-mask-image: url({{ section.settings.image-icon-2 | img_url : 'master' }});"></div>
            </div>	
          </div>
        </div>
        <div class="col-lg-6">
          <div class="content pl--40 pl_md--5 pl_sm--5">
            <div class="title--creative wow move-up">
              <h2><span class="theme-creative">{{ section.settings.heading }}</span></h2>
            </div>
            <h5 class="wow move-up">{{ section.settings.title_1 }}</h5>
            <p class="wow move-up">
             {{ section.settings.content_1 }}
            </p>
            <h5 class="wow move-up">{{ section.settings.title_2 }}</h5>
            {{ section.settings.content_2 }}

            <div class="wow move-up">
              <br>
              <a href="{{ section.settings.url }}" class="brook-btn" style="height: 50px; width: 360px;">{{ section.settings.button_1 }}</a>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}
{% schema %}
  {
    "name": "Section Vega Recover",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },
		{
          "type": "header",
          "content": "Content"
    	},
		{
          "type": "image_picker",
          "id": "image-bg",
          "label": "Image Background"
        },
		
		{
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
		{
          "type": "image_picker",
          "id": "image-icon-1",
          "label": "Icon 1"
        },{
          "type": "image_picker",
          "id": "image-icon-2",
          "label": "Icon 2"
        },
		{
          "type": "text",
          "id": "heading",
          "label": "Heading",
		  "default" : "Vega Relax"
        },
		{
          "type": "text",
          "id": "title_1",
          "label": "Title 1",
		  "default" : "Description:"
        },
		{
          "type": "html",
          "id": "content_1",
          "label": "content 1"
        },
		{
          "type": "text",
          "id": "title_2",
          "label": "Title 2",
		  "default" : "Specifications and Features:"
        },
		{
          "type": "html",
          "id": "content_2",
          "label": "content 2"
        },
		{
          "type": "text",
          "id": "button_1",
          "label": "Button",
		  "default": {
			"en": "Shop now",
			 "zh-TW": "現在去購物"
          }
        },
		{
          "type": "url",
          "id": "url",
          "label": "Url"
        }
	]
  }
{% endschema %}
