{% if section.settings.show_section %}
  {% for block in section.blocks %}
	 {% assign event = forloop.index | modulo: 2 %}
     {% if event == 0 %}
      <div class="food-menu-area" data-section-id="{{ section.id }}">
        <div class="container">
          <div class="row no-gutters">
            <div class="col-lg-7 order-1 order-lg-0">
              <div class="food-menu-wrap wow move-up text-center animate" style="visibility: visible; opacity: 0;">
                <div class="title--creative text-center mb--50">
                  <h2 class="ml-auto mr-auto"><span class="theme-creative">{{ block.settings.title }}</span></h2>

                </div>
                <p class="wow move-up pb--20 animate" style="visibility: visible; opacity: 0;">
                 {{ block.settings.description }}
                </p>

              </div>
            </div>
            <div class="col-lg-5 order-0 order-lg-1">
              <div class="bg-right-p">
                 <img src="{{ block.settings.image | img_url : 'grande' }}" alt="{{ block.settings.image.alt | default : block.settings.title }}">
              </div>
            </div>

          </div>
        </div>
      </div>
 {% else %}
      <div class="food-menu-area" data-section-id="{{ section.id }}">
        <div class="container">
          <div class="row no-gutters">
            <div class="col-lg-5">
              <div class="bg-left-p">
                <img src="{{ block.settings.image | img_url : 'grande' }}" alt="{{ block.settings.image.alt | default : block.settings.title }}">
              </div>
            </div>
            <div class="col-lg-7">
              <div class="food-menu-wrap wow move-up text-center">
                <div class="title--creative text-center mb--50">
                  <h2 class="ml-auto mr-auto"><span class="theme-creative">{{ block.settings.title }}</span></h2>
                </div>
                <p class="wow move-up pb--20">
                 {{ block.settings.description }}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
  {% endif %}    
 {% endfor %}
{% endif %}
{% schema %}
  {
    "name": "Section Menu",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        }
	],
	"blocks": [
    {
      "type": "content",
      "name": "content",
      "settings": [
		{
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title"
        },
		{
          "type": "html",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ]
  }
{% endschema %}
