{% if section.settings.show_section %}
  <div class="bk-portfolio-area collection-section creative-portfolio section-pb-100" data-section-id="{{ section.id }}">
      <div class="parallax-container js-text-parallax">
        <div class="fx-wrap" data-x="-200">
          <h3 class="fx-target">{{ section.settings.text_1 }}</h3>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="section-title--between wow move-up">
              <div class="title">
                <h3> {{ section.settings.title_1 }} <span class="theme-creative">{{ section.settings.title_2 }}</span></h3>
              </div>
              <div class="section-btn mt_mobile--10">
                <a class="button-text" href="{{ section.settings.url }}"><span>{{ section.settings.button }}</span><i class="fa fa-arrow-right"></i></a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="portfolio-wrapper mt--40 wow move-up">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <div class="porfolio-swip-horizontal">
                <div class="swiper-wrapper">
                  {% for block in section.blocks %}
                    <!-- Start Collection -->
                    <a href="{{ block.settings.url }}" class="portfolio portfolio_style--2 mt--30 swiper-slide">
                      <div class="thumb">
                        <img src="{{ block.settings.image | img_url : 'grande' }}" alt="{{ block.settings.image.alt }}">
                      </div>
                    </a>
                    <!-- End Collection -->
                  {% endfor %}
                </div>
                <!-- Add Pagination -->
                <div class="swiper-pagination"></div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
{% endif %}
{% schema %}
  {
    "name": "Section Collection",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },
		{
          "type": "header",
          "content": "Content"
    	},
		{
          "type": "text",
          "id": "text_1",
          "label": "Text",
		   "default": {
			 "en": "Collection",
			 "zh-TW": "Collection"
          }
        },
		{
          "type": "text",
          "id": "title_1",
          "label": "Title",
		  "default" : "Vega"
        },
		{
          "type": "text",
          "id": "title_2",
          "label": "Title",
		  "default" : "Collection"
        },
		{
          "type": "text",
          "id": "button",
          "label": "Button",
		  "default": "View all Collection"
        },
		{
          "type": "url",
          "id": "url",
          "label": "Url"
        }
	],
	"blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
		{
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
		{
          "type": "url",
          "id": "url",
          "label": "Url"
        }
      ]
    }
  ]
  }
{% endschema %}
