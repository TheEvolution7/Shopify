{% if section.settings.show_section %}
  <div class="black-bg-wrapper bg_image--4 banner-section" style="background-image: url({{ section.settings.bg | img_url : '1920x' }});" data-section-id="{{ section.id }}">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-12 col-xl-10">
          <div class="section-title text-center white-text wow move-up">
            <h4 class="text-white">{{ section.settings.title }}</h4>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}
{% schema %}
  {
    "name": "Section Background 1",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },
		{
          "type": "header",
          "content": "Content"
    	},
		{
          "type": "image_picker",
          "id": "bg",
          "label": "Background"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default" : "Inhale Natural Rest. Feel Relaxed and sleepy with this calming essential oil blend, Vega Sleep."
        }
	]
  }
{% endschema %}
