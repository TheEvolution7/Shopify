{% if section.settings.show_section %}
  <div class="bk-about-area section-ptb-100" id="section-about" data-section-id="{{ section.id }}">
    <div class="parallax-container js-text-parallax">
      <div class="fx-wrap" data-x="-200">
        <h3 class="fx-target">{{ section.settings.text }}</h3>
      </div>
    </div>
    <style>
      .about--creative .thumb {
      	margin: 25px;
      }
      .about--creative .thumb::before {
        	top: -25px;
        	right: -25px;
		    left: -25px;
            bottom: -25px;
        	width: unset;
        	height: unset
		}
    </style>
    <div class="container">
      <div class="row about--creative align-items-center">
        <div class="col-lg-6 col-md-12 col-12">
          <div class="thumb text-left text-lg-left">
            <img class=" wow fadeIn" data-wow-delay="300ms" src="{{ section.settings.image | img_url: '1000x' }}" alt="{{ section.settings.heading }}">
          </div>
        </div>
        <div class="col-lg-6 col-md-12 col-12 mt_md--40 mt_sm--40">
          <div class="content pl--80 pl_md--5 pl_sm--5">
            <div class="title--creative wow move-up">
              <h3 class="heading">{{ section.settings.head }}</h3>
              <h2>{{ section.settings.title_1 }} <br> <span class="theme-creative">{{ section.settings.title_3 }}</span></h2>
            </div>
            <p class="wow move-up">{{ section.settings.content }}</p>
            <a class="about-btn wow move-up" href="{{ section.settings.url }}"><span>{{ section.settings.button_1 }}</span><i class="fa fa-arrow-right"></i></a>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}
{% schema %}
  {
    "name": "Section About",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },
		{
          "type": "header",
          "content": "Content"
    	},
		{
          "type": "text",
          "id": "text",
          "label": "Text",
		  "default": {
			"en": "About",
			 "zh-TW": "About"
          }
        },
		{
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
		{
          "type": "text",
          "id": "head",
          "label": "Heading",
		   "default": {
			 "en": "About Us",
			 "zh-TW": "關於我們"
          }
        },
		{
          "type": "text",
          "id": "title_1",
          "label": "Title",
		  "default" : "Welcome to"
        },
		{
          "type": "text",
          "id": "title_3",
          "label": "Title",
		  "default": {
			 "en": "Vega family.",
			 "zh-TW": "Vega family."
          }
        },
		{
          "type": "html",
          "id": "content",
          "label": "content"
        },
		{
          "type": "text",
          "id": "button_1",
          "label": "Button",	  
		  "default": {
			"en": "More Details",
			 "zh-TW": "更多細節" 
             
          }
        },
		{
          "type": "url",
          "id": "url",
          "label": "Url"
        }
	]
  }
{% endschema %}
