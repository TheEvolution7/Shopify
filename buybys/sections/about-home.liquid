{% if section.settings.show_section %}
  {%- for block in section.blocks -%}
    {% assign event = forloop.index | modulo: 2 %}
    {% if event == 0 %}
     <section class="intro-cls section-padding position-re bg-section __2" data-section-id="{{ section.id }}">
        <div class="container">
          <div class="row">
            <div class="col-lg-6">
              <div class="cont wow fadeIn">
               <h2>{{ block.settings.title }}</h2>
               	{{ block.settings.text }}
              </div>
            </div>
            <div class="col-lg-6">
              <div class="thumb-about-1 wow fadeIn">
                <img src="{{ block.settings.image | img_url : 'grande' }}" alt="{{ block.settings.title }}">
              </div>
            </div>
          </div>
        </div>
      </section>
    {% else %}
	   <section class="intro-cls section-padding position-re bg-section" data-section-id="{{ section.id }}">
        <div class="container">
          <div class="row">
            <div class="col-lg-6 order-1 order-lg-0">
              <div class="thumb-about-1 wow fadeIn">
                <img src="{{ block.settings.image | img_url : 'grande' }}" alt="{{ block.settings.title }}">
              </div>
            </div>
            <div class="col-lg-6 order-0 order-lg-1">
              <div class="cont wow fadeIn">
                <h5 class="clorful">{{ block.settings.heading }}</h5>
                <h2>{{ block.settings.title }}</h2>
               	{{ block.settings.text }}
              </div>
            </div>
          </div>
        </div>
      </section>
      
    {% endif %}
  {%- endfor -%} 
{% endif %}
{% schema %}
  {
    "name": "Section About",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        }
	],
	"blocks": [
    {
      "type": "content",
      "name": "content",
      "settings": [
		{
		  "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
		{
          "type": "text",
          "id": "heading",
          "label": "Heading" 
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title" 
        },
		{
          "type": "richtext",
          "id": "text",
          "label": "SubTitle"	 
        }
      ]
    }
  ]
  }
{% endschema %}
