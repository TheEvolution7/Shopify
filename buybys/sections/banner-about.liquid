<header class="slider pages bg-img valign parallaxie" data-background="{{ section.settings.bg | img_url : '1920x' }}" data-overlay-dark="8" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-9 col-md-11">
        <div class="caption text-center bold">
          <h1>{{ page_title }}</h1>
        </div>
      </div>
    </div>
  </div>
</header>
{% schema %}
  {
    "name": "Section Banner",
    "settings": [
		{
          "type": "image_picker",
          "id": "bg",
          "label": "Background"
        }	
	]
  }
{% endschema %}
