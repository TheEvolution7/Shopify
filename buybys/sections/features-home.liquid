{% if section.settings.show_section %}
  <section class="intro-cls section-padding position-re" data-section-id="{{ section.id }}">
    <div class="parallax-container js-text-parallax">
      <div class="fx-wrap" data-x="200">
        <h3 class="fx-target">{{ section.settings.heading }}</h3>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-6 valign">
          <div class="cont __ani  wow fadeIn">
            <h5 class="clorful">{{ section.settings.heading }}</h5>
            <h2>{{ section.settings.title }}</h2>
            {{ section.settings.content }}
            <a href="{{ section.settings.url }}" class="btn-skew btn-color btn-bg mt-30">
              <span>{{ section.settings.button }}</span>
              <i></i>
            </a>
          </div>
        </div>
        <div class="col-md-6">
          <div class="imgsth __ani wow fadeIn">
            <div class="imgcmbo">
              <div class="img2">
                <img src="{{ section.settings.image_2 | img_url : 'grande' }}" alt="{{ section.settings.title }}">
              </div>
              <div class="img3">
                <img src="{{ section.settings.image_3 | img_url : 'grande' }}" alt="{{ section.settings.title }}">
              </div>
            </div>
            <div class="img1 valign">
              <img src="{{ section.settings.image_1 | img_url : 'grande' }}" alt="{{ section.settings.title }}">
            </div>
          </div>
          <div class="pattern-img">
            <img src="{{ 'icon-1.svg' | asset_url }}" alt="">
          </div>
        </div>
      </div>
    </div>
  </section>
{% endif %}
{% schema %}
  {
    "name": "Section Features",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },
		{
          "type": "header",
          "content": "Image"
    	},
		{
          "type": "image_picker",
          "id": "image_1",
          "label": "Image 1"
        },
		{
          "type": "image_picker",
          "id": "image_2",
          "label": "Image 2"
        },
		{
          "type": "image_picker",
          "id": "image_3",
          "label": "Image 3"
        },
		{
          "type": "header",
          "content": "Content"
    	},
		{
          "type": "text",
          "id": "heading",
          "label": "Heading",
		  "default" : "Features"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default" : "Why BYS?"
        },
		{
          "type": "html",
          "id": "content",
          "label": "Content"
        },
		{
          "type": "text",
          "id": "button",
          "label": "Button",
		  "default" : "Discover more"
        },
		{
          "type": "url",
          "id": "url",
          "label": "Url"
        }
	]
  }
{% endschema %}
