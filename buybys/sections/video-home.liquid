<section class="video-sec section-padding">
  <div class="parallax-container js-text-parallax">
      <div class="fx-wrap" data-x="200">
        <h3 class="fx-target">{{ section.settings.heading }}</h3>
      </div>
  </div>
  <div class="container">
    <div class="sec-head text-center wow fadeIn">
      <!-- <h6>Features</h6> -->
      <h3>{{ section.settings.title }}</h3>
      <span class="icon">
        <img class="rotate-img" src="{{ 'icon-1.svg' | asset_url }}" alt="">
      </span>
    </div>
    <style>
      .video-sec {
      	position: relative;
      }
      .box-video {
      	position: relative;
        padding-bottom: 60%;
        
      }
      .box-video iframe {
      	position: absolute;
        width: 100%;
        height: 100%;
        object-fit: cover;
        left: 0;
        top: 0
      }
    </style>
    <div class="row">
      <div class="col-12">
        <div class="box-video">
        	<iframe width="560" height="315" src="https://www.youtube.com/embed/Vodq21uCogg" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
      </div>
    </div>
  </div>
  <!-- <div class="shape-bottom">
<img src="img/img-curve.png" alt="">
</div> -->
</section>

{% schema %}
  {
    "name": "Video Home",
    "settings": [
		{
          "type": "text",
          "id": "heading",
          "label": "Heading",
		  "default" : "Tutorial"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default" : "Bys Tutorial"
        }
	]
  }
{% endschema %}

