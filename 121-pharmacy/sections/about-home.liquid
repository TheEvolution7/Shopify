{% if section.settings.show_section %}
  <div class="ltn__about-us-area section-bg-1 bg-image-left-before pt-40 pb-40" data-section-id="{{ section.id }}">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 align-self-center">
          <div class="about-us-img-wrap about-img-left---">

          </div>
        </div>
        <div class="col-lg-6 align-self-center">
          <div class="about-us-info-wrap">
            <div class="section-title-area ltn__section-title-2--- mb-20">
              <h6 class="section-subtitle section-subtitle-2--- ltn__secondary-color">{{ section.settings.text }}</h6>
              <h1 class="section-title">{{ section.settings.title }}</h1>
              {{ section.settings.subtitle }}
            </div>
            <ul class="ltn__list-item-half clearfix">
             {% for block in section.blocks %}
              <li>
                {{ block.settings.icon }}
                {{ block.settings.title }}
              </li>
             {% endfor %} 
            </ul>
            <div class="btn-wrapper animated">
              <a href="{{ section.settings.url }}" class="ltn__secondary-color text-uppercase text-decoration-underline">{{ section.settings.button }}</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}
{% schema %}
  {
    "name": "Section About",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },	
		{
			"type" : "header",
			"content" : "Content"
		},
		{
          "type": "text",
          "id": "text",
          "label": "Text",
		  "default": "N95 Facial  Covering Mask"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default": "Grade A Safety Masks For Sale. Haurry Up!"
        },
		{
          "type": "richtext",
          "id": "subtitle",
          "label": "Subtitle",
		  "default": "<p>Over 39,000 people work for us in more than 70 countries all over the This breadth of global coverage, combined with specialist services</p>"
        },
		{
          "type": "text",
          "id": "button",
          "label": "Button",
		  "default": "View Products"
        },
		{
          "type": "url",
          "id": "url",
          "label": "Url"
        }
	],
	"blocks": [
    {
      "type": "icon",
      "name": "icon",
      "settings": [
		{
          "type": "text",
          "id": "icon",
          "label": "Class Icon"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title"
        }
      ]
    }
  ]
  }
{% endschema %}
