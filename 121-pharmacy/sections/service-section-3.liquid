{% if section.settings.show_section %}
  <div class="ltn__blog-area pt-40 pb-0" data-section-id="{{ section.id }}">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="section-title-area ltn__section-title-2--- text-center">
            <h6 class="section-subtitle section-subtitle-2 ltn__secondary-color">{{ section.settings.text }}</h6>
            <h1 class="section-title">{{ section.settings.title }}</h1>
          </div>
        </div>
      </div>
      <div class="row  ltn__blog-slider-one-active slick-arrow-1 ltn__blog-item-3-normal">
        <!-- Blog Item -->
        {% for block in section.blocks %}
        {% assign article = articles[block.settings.blog] %}
          <div class="col-lg-12">
            <div class="ltn__blog-item ltn__blog-item-3">
              <div class="ltn__blog-img">
                <a href="{{ article.url }}"><img src="{{ article.image | img_url: 'grande' }}"  alt="{{ article.image.alt | default: article.title }}" /></a>
              </div>
              <div class="ltn__blog-brief">
                <div class="ltn__blog-meta">
                  <ul>
                    <li class="ltn__blog-author">
                      <a href="#"><i class="far fa-user"></i>by: {{ article.author }}</a>
                    </li>
                    <li class="ltn__blog-tags">
                      {% for tag in article.tags limit : 2 %}
                      	<a href="/blogs/news/tagged/{{ tag | handle }}"><i class="fas fa-tags"></i>{{ tag }}</a>
                      {% endfor %}
                    </li>  
                  </ul>
                </div>
                <h3 class="ltn__blog-title"><a href="{{ article.url }}">{{ article.title }}</a></h3>
                <div class="ltn__blog-meta-btn">
                  <div class="ltn__blog-meta">
                    <ul>
                      <li class="ltn__blog-date"><i class="far fa-calendar-alt"></i>{{ article.published_at | time_tag: format: 'date' }}</li>
                    </ul>
                  </div>
                  <div class="ltn__blog-btn">
                    <a href="{{ article.url }}">Read more</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
        <!--  -->
      </div>
    </div>
  </div>
{% endif %}
{% schema %}
{
  "name": "Section News & Blogs",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_section",
      "label": "Show section",
      "default": true
    },
	{
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "News & Blogs"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Leatest News Feeds"
    }
],
"blocks": [
    {
      "type": "blog",
      "name": "Blog",
      "settings": [
        {
          "id": "blog",
          "type": "article",
          "label": "Blog"
        }
      ]
    }
  ]
}
{% endschema %}

