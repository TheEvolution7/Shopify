{% if section.settings.show_section %}
  <div class="ltn__faq-area pt-40 pb-40">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="section-title-area ltn__section-title-2 text-center">
            <h1 class="section-title white-color---">{{ section.settings.title }}</h1>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <div class="ltn__faq-inner ltn__faq-inner-2">
            <div id="accordion_2">
              <!-- card -->
             {% for block in section.blocks  %}
              <div class="card">
                <h6 class="{% if forloop.index == 2 %}collapsed{% endif %} ltn__card-title" data-bs-toggle="collapse"
                    data-bs-target="#faq-item-2-{{ forloop.index }}" aria-expanded="{% if forloop.index == 2 %}true{% else %}false{% endif %}">
                 {{ block.settings.title }}
                </h6>
                <div id="faq-item-2-{{ forloop.index }}" class="collapse {% if forloop.index == 2 %}show{% endif %}" data-bs-parent="#accordion_2">
                  <div class="card-body">
                    {% if block.settings.show_video %}
                      <div class="ltn__video-img alignleft">
                        <img src="{{ block.settings.image | img_url : 'grande' }}" alt="{{ block.settings.title }}">
                        <a class="ltn__video-icon-2 ltn__video-icon-2-small ltn__video-icon-2-border----"
                           href="{{ block.settings.link }}"
                           data-rel="lightcase:myCollection">
                          <i class="fa fa-play"></i>
                        </a>
                      </div>
                    {% endif %}
                    {{ block.settings.subtitle }}
                  </div>
                </div>
              </div>
             {% endfor %} 
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <aside class="about-us-img-wrap about-img-right">
            <img src="{{ section.settings.image | img_url : 'grande' }}" alt="{{ section.settings.title }}">
          </aside>
        </div>
      </div>
    </div>
  </div>
{% endif %}
{% schema %}
  {
    "name": "Section Some Questions",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },	
		{
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
		{
			"type" : "header",
			"content" : "Content"
		},
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default": "Some Questions"
        }	
	],
	"blocks": [
    {
      "type": "content",
      "name": "content",
      "settings": [
		{
          "type": "text",
          "id": "title",
          "label": "Title"
        },
		{
          "type": "richtext",
          "id": "subtitle",
          "label": "SubTitle",
		  "default": "<p>Lorem ipsum dolor sit ame it, consectetur adipisicing elit, sed do eiusmod te mp or incididunt ut labore.</p>"
        },
		{
          "type": "checkbox",
          "id": "show_video",
          "label": "Show video",
          "default": false
        },
		{
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
		{
          "type": "text",
          "id": "link",
          "label": "Link Youtube",
		  "default": "https://www.youtube.com/embed/Cr4LFOgRGeo?autoplay=1&amp;showinfo=0"
        }
      ]
    }
  ]
  }
{% endschema %}



