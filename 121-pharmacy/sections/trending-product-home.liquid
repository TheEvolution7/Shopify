{% if section.settings.show_section %}
	<div class="ltn__product-area ltn__product-gutter  no-product-ratting pt-115 pb-70---" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title-area ltn__section-title-2 text-center">
          <h1 class="section-title">{{ section.settings.title }}</h1>
        </div>
      </div>
    </div>
    <div class="row ltn__tab-product-slider-one-active--- slick-arrow-1">
      {% for block in section.blocks %}
      {% assign product = block.settings.product %}
       	{% include 'product-home-list', product: product %}
      {% endfor %}
    </div>
  </div>
</div>
{% endif %}
{% schema %}
  {
    "name": "Section Trending Products",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },
		{
          "type": "header",
          "content": "Content"
    	},
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default" : "Trending Products"
        }  	
	],
	"blocks": [
    {
      "type": "product",
      "name": "product",
	  "limit" : 4,
      "settings": [
		{
          "type": "product",
          "id": "product",
          "label": "Product" 
        }
      ]
    }
  ]
  }
{% endschema %}
