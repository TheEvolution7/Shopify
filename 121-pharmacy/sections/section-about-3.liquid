{% if section.settings.show_section %}
  <div class="ltn__feature-area pt-40 pb-40" data-section-id="{{ section.id }}">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="section-title-area ltn__section-title-2--- text-center">
            <h1 class="section-title">{{ section.settings.title }}</h1>
          </div>
        </div>
      </div>
      <div class="row ltn__custom-gutter">
       {% for block in section.blocks  %}
        <div class="col-lg-3 col-sm-6 col-12">
          <div class="ltn__feature-item ltn__feature-item-6 text-center">
            <div class="ltn__feature-icon">
              <img src="{{ block.settings.image | img_url : 'large' }}" alt="{{ block.settings.title }}">
            </div>
            <div class="ltn__feature-info">
              <h4><a href="{{ block.settings.url }}">{{ block.settings.title }}</a></h4>
              {{ block.settings.subtitle }}
            </div>
          </div>
        </div>
       {% endfor  %} 
      </div>
    </div>
  </div>
{% endif %}
{% schema %}
  {
    "name": "Section Core",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },			
		{
			"type" : "header",
			"content" : "Content"
		},
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default": "Core Features"
        }	
	],
	"blocks": [
    {
      "type": "content",
      "name": "content",
      "settings": [
		{
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title"
        },
		{
          "type": "richtext",
          "id": "subtitle",
          "label": "Subtitle",
		  "default": "<p>Lorem ipsum dolor sit ame it, consectetur adipisicing elit, sed do eiusmod te mp or incididunt ut labore.</p>"
        },
		{
          "type": "url",
          "id": "url",
          "label": "Url"
        }
      ]
    }
  ]
  }
{% endschema %}
