{% if section.settings.show_section %}
  <div class="ltn__product-area ltn__product-gutter pb-40" data-section-id="{{ section.id }}">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="section-title-area ltn__section-title-2 text-center">
            <h1 class="section-title">{{ section.settings.title }}</h1>
          </div>
        </div>
      </div>
      <div class="row ltn__tab-product-slider-one-active--- slick-arrow-1">
        <!-- ltn__product-item -->
      <div class="globo_widget_4866"></div>
      </div>
    </div>
  </div>
{% endif %}
{% schema %}
  {
    "name": "Section Leatest Product",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },
		{
          "type": "header",
          "content": "Content"
    	},
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default" : "Leatest Product"
        }	
  ]
  }
{% endschema %}
