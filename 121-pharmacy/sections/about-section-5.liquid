{% if section.settings.show_section %}
  <div class="ltn__team-area pt-40 pb-40" data-section-id="{{ section.id }}">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="section-title-area ltn__section-title-2--- text-center">
            <h1 class="section-title">{{ section.settings.title }}</h1>
          </div>
        </div>
      </div>
      <div class="row justify-content-center">
       {% for block in section.blocks  %}
        <div class="col-lg-4 col-sm-6">
          <div class="ltn__team-item ltn__team-item-3---">
            <div class="team-img">
              <img src="{{ block.settings.image | img_url : 'large' }}" alt="{{ block.settings.title }}">
            </div>
            <div class="team-info">
              <h4><a href="team-details.html">{{ block.settings.title }}</a></h4>
              <h6 class="ltn__secondary-color">{{ block.settings.subtitle }}</h6>
              <div class="ltn__social-media">
                <ul>
                  <li><a href="{{ block.settings.fb }}"><i class="fab fa-facebook-f"></i></a></li>
                  <li><a href="{{ block.settings.tw }}"><i class="fab fa-twitter"></i></a></li>
                  <li><a href="{{ block.settings.linkedin }}"><i class="fab fa-linkedin"></i></a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
       {% endfor  %} 
      </div>
    </div>
  </div>
{% endif %}
{% schema %}
  {
    "name": "Section Expert Doctor",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },			
		{
			"type" : "header",
			"content" : "Content"
		},
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default": "Our Expert Doctor"
        }	
	],
	"blocks": [
    {
      "type": "content",
      "name": "content",
      "settings": [
		{
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title"
        },
		{
          "type": "richtext",
          "id": "subtitle",
          "label": "Subtitle",
		  "default": "<p>Lorem ipsum dolor sit ame it, consectetur adipisicing elit, sed do eiusmod te mp or incididunt ut labore.</p>"
        },
		{
          "type": "text",
          "id": "fb",
          "label": "Link Facebook",
		  "default": "https://www.facebook.com/shopify"
        },
		{
          "type": "text",
          "id": "tw",
          "label": "Link Twitter",
		  "default": "https://twitter.com/shopify"
        },
		{
          "type": "text",
          "id": "linkedin",
          "label": "Link Linkedin",
		  "default": "https://www.linkedin.com/shopify"
        }
      ]
    }
  ]
  }
{% endschema %}

