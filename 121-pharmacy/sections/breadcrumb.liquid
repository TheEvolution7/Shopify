<div class="ltn__breadcrumb-area text-center bg-overlay-white-30 bg-image " data-bs-bg="{{ section.settings.banner | img_url : '1920x' }}">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="ltn__breadcrumb-inner">
          <h1 class="page-title">{{ page_title }}</h1>
          <div class="ltn__breadcrumb-list">
            <ul>
              <li><a href="{{ routes.root_url }}"><span class="ltn__secondary-color"><i  class="fas fa-home"></i></span> Home</a></li>
              <li>{{ page_title }}</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Section breadcrumb",
    "settings": [
  		{
          "type": "image_picker",
          "id": "banner",
          "label": "Banner"
        }
	]
  }
{% endschema %}


