{% if section.settings.show_section %}
  <div class="ltn__feature-area section-bg-1 pt-40 pb-40" data-section-id="{{ section.id }}"> 
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="section-title-area ltn__section-title-2 text-center">
            <h6 class="section-subtitle ltn__secondary-color">{{ section.settings.text }}</h6>
            <h1 class="section-title">{{ section.settings.title }}<span>.</span></h1>
          </div>
        </div>
      </div>
      <div class="row justify-content-center">
       {% for block in section.blocks  %}
        <div class="col-lg-4 col-sm-6 col-12">
          <div class="ltn__feature-item ltn__feature-item-7">
            <div class="ltn__feature-icon-title">
              <div class="ltn__feature-icon">
                <!-- <span><img src="img/icons/icon-img/21.png" alt="#"></span> -->
                <span>{{ block.settings.icon }} </span>
              </div>
              <h3><a href="service-details.html">{{ block.settings.title }}</a></h3>
            </div>
            <div class="ltn__feature-info">
              {{ block.settings.subtitle }}
            </div>
          </div>
        </div>
       {% endfor  %} 
      </div>
    </div>
  </div>
{% endif %}
{% schema %}
  {
    "name": "Section Features",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },			
		{
			"type" : "header",
			"content" : "Content"
		},
		{
          "type": "text",
          "id": "text",
          "label": "Text",
		  "default": "// features //"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default": "Clients Feedbacks"
        }	
	],
	"blocks": [
    {
      "type": "content",
      "name": "content",
      "settings": [
		{
          "type": "text",
          "id": "icon",
          "label": "Class icon"
        },
		{
          "type": "html",
          "id": "title",
          "label": "Title"
        },
		{
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
		  "default": "<p>Lorem ipsum dolor sit ame it, consectetur adipisicing elit, sed do eiusmod te mp or incididunt ut labore.</p>"
        }
      ]
    }
  ]
  }
{% endschema %}



