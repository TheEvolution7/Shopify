{% if section.settings.show_section %}
  <div class="google-map mb-0" data-section-id="{{ section.id }}">
	{{ section.settings.iframe }}
  </div>
{% endif %}
{% schema %}
  {
    "name": "Section Map",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },
		{
          "type": "html",
          "id": "iframe",
          "label": "Iframe"
        }
	]
  }
{% endschema %}


