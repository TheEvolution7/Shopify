<!-- Utilize Mobile Menu Start -->
<div id="ltn__utilize-mobile-menu" class="ltn__utilize ltn__utilize-mobile-menu">
  <div class="ltn__utilize-menu-inner ltn__scrollbar">
    <div class="ltn__utilize-menu-head">
      <div class="site-logo">
        <a href="{{ routes.root_url }}"><img src="{{ logo_mobile | img_url: 'large' }}" alt="{{ logo_mobile.alt | default: shop.name }}"></a>
      </div>
      <button class="ltn__utilize-close">Ã—</button>
    </div>
    <div class="ltn__utilize-menu-search-form">
      <form action="{{ routes.search_url }}" method="get" role="search">
        <input type="text" id="keyword" name="q" placeholder="{{ 'general.search.placeholder' | t }}" value="{{ search.terms | escape }}">
        <input type="hidden" name="type" value="product" aria-hidden="true" />
        <input type="hidden" name="options[prefix]" value="last" aria-hidden="true" />
        <button type="submit"><i class="fas fa-search"></i></button>
      </form>
    </div>
    <div class="ltn__utilize-menu">
      <ul>
          {% for link in linklists[mobile_linklist].links %}  
        	<li> {%- if link.links != blank -%}<span class="menu-expand"></span>{%- endif -%}<a href="{{ link.url }}">{{ link.title }}</a>
            
             {%- if link.links != blank -%}
              <ul class="sub-menu" style="display: none;">
                  {% for child_link in link.links %}
                      <li><a href="{{ child_link.url }}">{{ child_link.title | escape }}</a></li>
                  {% endfor %}
              </ul>
            {%- endif -%}
            </li>
          
        {% endfor %} 
       
      </ul>
    </div>
    <div class="ltn__utilize-buttons ltn__utilize-buttons-2">
      <ul>
        {%- if customer -%}
          <li>
            <a href="/account" title="My Account">
              <span class="utilize-btn-icon">
                {% include 'icon-login' %}
              </span>
              My Account
            </a>
          </li>
        {%- else -%}
          <li>
            <a href="/account/login" title="My Account">
              <span class="utilize-btn-icon">
                {% include 'icon-login' %}
              </span>
               Login
            </a>
          </li>
        {%- endif -%}
        <li>
          <a href="{{ routes.cart_url }}" title="Shoping Cart">
            <span class="utilize-btn-icon">
              <i class="fas fa-shopping-cart"></i>
              <sup>{{ cart.item_count }}</sup>
            </span>Shoping Cart
          </a>
        </li>
      </ul>
    </div>
    {%- if show_social_icons -%}
    	<div class="ltn__social-media-2">
      <ul>
        {%- assign socials = "Facebook Twitter Pinterest Instagram Tumblr Snapchat YouTube Vimeo" | split: ' ' -%}
        {%- for social in socials -%}
          {%- assign social_link = social | prepend: 'social_' | append: '_link' | downcase -%}
          {%- assign icon_link = social | prepend: 'icon-' | downcase -%}
          {%- if settings[social_link] != blank -%}
              <li><a href="{{ settings[social_link] | escape }}">{%- include icon_link -%}</a></li>
          {%- endif -%}
        {%- endfor -%}  
      </ul>
    </div>
    {%- endif -%}
  </div>
</div>
<!-- Utilize Mobile Menu End -->
<div class="ltn__utilize-overlay"></div>
