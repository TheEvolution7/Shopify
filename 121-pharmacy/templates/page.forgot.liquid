{% section 'breadcrumb' %}
<div class="ltn__login-area pb-65">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title-area text-center">
          <h1 class="section-title">{{ page_title }}</h1>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 offset-lg-3">
        <div class="account-login-inner">
            {% form 'recover_customer_password',class : 'ltn__form-box contact-form-box' %}
              <input type="email" value="" name="email" id="RecoverEmail" placeholder="{{ 'customer.recover_password.email' | t }}">
              <div class="btn-wrapper mt-0">
                <button class="theme-btn-1 btn btn-block" type="submit">{{ 'customer.recover_password.submit' | t }}</button>
                 <a href="/account/login" class="theme-btn-1 btn btn-block"><small>{{ 'customer.recover_password.cancel' | t }}</small></a>
              </div>  
          {% endform %}    
        </div>
      </div>
    </div>
  </div>
</div>
