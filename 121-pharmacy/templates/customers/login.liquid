{% section 'breadcrumb' %}
<div class="ltn__login-area pb-65">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title-area text-center">
          <h1 class="section-title">{{ 'customer.login.title' | t }}</h1>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <div class="account-login-inner">
            {% form 'customer_login',class : 'ltn__form-box contact-form-box' %}
               <input type="email" name="customer[email]" placeholder="{{ 'customer.login.email' | t }}" required>
              <input type="password" name="customer[password]"  placeholder="{{ 'customer.login.password' | t }}" required>
              <div class="btn-wrapper mt-0">
                <button class="theme-btn-1 btn btn-block" type="submit">{{ 'customer.login.sign_in' | t }}</button>
              </div>
              <div class="go-to-btn mt-20">
                <a href="/pages/forgot-password"><small>{{ 'customer.login.forgot_password' | t }}</small></a>
              </div>
          {% endform %}    
        </div>
      </div>
      <div class="col-lg-6">
        <div class="account-create text-center pt-50">
          <h4>DON'T HAVE AN ACCOUNT?</h4>
          <p>Add items to your wishlistget personalised recommendations <br> check out more quickly track your orders register</p>
          <div class="btn-wrapper">
            <a href="/account/register" class="theme-btn-1 btn black-btn">CREATE ACCOUNT</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>