{% section 'breadcrumb' %}
<div class="ltn__404-area ltn__404-area-1 mb-120">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="error-404-inner text-center">
          <div class="error-img mb-30">
            <img src="{{ 'error-1.png' | asset_url }}" alt="404">
          </div>
          <h1 class="error-404-title d-none">404</h1>
          <h2>{{ 'general.404.title' | t }}</h2>
          <!-- <h3>Oops! Looks like something going rong</h3> -->
          <p>{{ 'general.404.subtext' | t }}</p>
          <div class="btn-wrapper">
            <a href="{{ routes.root_url }}" class="btn btn-transparent"><i class="fas fa-long-arrow-alt-left"></i>{{ 'general.404.link' | t }}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
