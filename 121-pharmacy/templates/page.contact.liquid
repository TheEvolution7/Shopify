<!-- CONTACT MESSAGE AREA START -->
<div class="ltn__contact-message-area mb-40 mb-40">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="ltn__form-box contact-form-box box-shadow white-bg">
          <h4 class="title-2">Get A Quote</h4>
          {% form 'contact' %}
            {%- if form.posted_successfully? -%}
              <p>{{ 'contact.form.post_success' | t }}</p>
            {%- endif -%}
          	<input type="hidden" name="contact[tags]" value="Contact Form">
            <div class="row">
              <div class="col-md-6">
                <div class="input-item input-item-name ltn__custom-icon">
                  <input type="text" name="contact[{{ 'contact.form.name' | t }}]" placeholder="Full Name" value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}" required>
                </div>
              </div>
              <div class="col-md-6">
                <div class="input-item input-item-email ltn__custom-icon">
                  <input type="email" placeholder="Email Address" name="contact[email]" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" required>
                </div>
              </div>
              <div class="col-md-6">
                <div class="input-item input-item-subject ltn__custom-icon">
                  <input type="text" placeholder="Enter the subject" name="contact[subject]" required>
                </div>
              </div>
              <div class="col-md-6">
                <div class="input-item input-item-phone ltn__custom-icon">
                   <input type="text" name="contact[{{ 'contact.form.phone' | t }}]"  placeholder="Your Phone" value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}" required>
                </div>
              </div>
            </div>
            <div class="input-item input-item-textarea ltn__custom-icon">
              <textarea rows="10" name="contact[{{ 'contact.form.message' | t }}]"  placeholder="Your Message ...">{% if form.body %}{{ form.body }}{% endif %}</textarea>
            </div>
            <div class="btn-wrapper mt-0">
              <button class="btn theme-btn-1 btn-effect-1 text-uppercase" type="submit">{{ 'contact.form.submit' | t }}</button>
            </div>
            <p class="form-messege mb-0 mt-20"></p>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>
<!-- CONTACT MESSAGE AREA END -->

