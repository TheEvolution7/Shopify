{% if section.settings.show_section %}
  <section class="brand-logo-area brand-logo-style1-area" data-section-id="{{ section.id }}">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-lg-6 m-auto">
          <div class="section-title text-center">
            <h2 class="title" data-aos="fade-up" data-aos-duration="1000">{{ section.settings.title }}</h2>
          </div>
        </div>
      </div>
      <div class="row align-items-center">
        <div class="col-lg-12" data-aos="fade-up" data-aos-duration="1000">
          <div class="swiper-container brand-logo-slider-container">
            <div class="swiper-wrapper brand-logo-slider">
              {% for block in section.blocks  %}
                <div class="swiper-slide brand-logo-item">
                  <a href="{{ block.settings.url }}"><img src="{{ block.settings.logo | img_url : 'master' }}" alt="{{ block.settings.logo.alt }}"></a>
                </div>
              {% endfor  %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endif %}
{% schema %}
  {
    "name": "Section Brand logo",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default" : "Our Partners"
		  
        }
	],
	"blocks": [
    {
      "type": "logo",
      "name": "logo",
      "settings": [
		{
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        },
		{
          "type": "url",
          "id": "url",
          "label": "Url"
        }
      ]
    }
  ]
  }
{% endschema %}


