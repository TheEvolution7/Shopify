 <!--== Start Category Area Wrapper ==-->
{% for block in section.blocks  %}
 {%- assign collection = collections[block.settings.collection] -%}
  <section class="category-area product-collection-area">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="items-align">
            <div class="align-left">
              <div class="category-items-style15 mb-xs-30" data-aos="fade-up" data-aos-duration="1000">
                <!-- Start Category Item -->
                <div class="category-item hover-effect effect-style1">
                  <div class="thumb">
                    <a href="{{ collection.url }}"><img src="{{ collection.image | img_url: 'master' }}" alt="{{ collection.image.alt | default: collection.title }}"></a>
                    <div class="effect-content"></div>
                  </div>
                  <div class="content">
                    <h4 class="title">{{ collection.title }}</h4>
                  </div>
                </div>
                <!-- End Category Item -->
              </div>
            </div>
            <div class="align-right">
              <div class="row row-gutter-60 justify-content-center">
                {% for product in collection.products limit: 3 %}
                  <div class="col-12 col-md-4" data-aos="fade-up" data-aos-duration="1000">
                    <!-- Start Product Item -->
                    <div class="product-item">
                      <div class="product-thumb">
                        {%- if product.available -%}
                        {%- if product.compare_at_price > product.price -%}
                        	<div class="st-box __new">{{ 'products.product.on_sale' | t }}</div>
                        {%- endif -%}
                        {%- else -%}
                        	<div class="st-box __soldout">{{ 'products.product.sold_out' | t }}</div>
                        {%- endif -%}
                        <a href="{{ product.url }}">
                          <img src="{{ product.featured_image | img_url : 'grande' }}" alt="{{ product.featured_image.alt | default : product.title }}">
                          <span class="bg-thumb" data-bg-img="{{ product.media[1] | img_url : 'grande' }}"></span>
                          <span class="thumb-overlay"></span>
                        </a>
                      </div>
                      <div class="product-info">
                        <div class="content-inner">
                          <h4 class="title"><a href="{{ product.url }}">{{ product.title }}</a></h4>
                          <div class="prices">
                            {% if product.compare_at_price %}<span class="price"><del>{{ product.compare_at_price | money }}</del></span> {% endif %} 
                            <span class="price">{{ product.price | money }}</span>
                          </div>
                        </div>
                        <div class="product-info-action">
                        </div>
                      </div>
                    </div>
                    <!-- End Product Item -->
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!--== End Category Area Wrapper ==-->

  <!--== Start Divider Area Wrapper ==-->
  <section class="divider-area bg-overlay-black2-51 bg-img" >
    <div class="container">
      <div class="row">
        <div class="col-md-6 m-auto">
          <div class="divider-content divider-content-style6">
            <h2 data-aos="fade-up" data-aos-duration="1000">{{ block.settings.title }}</h2>
            <h4 data-aos="fade-up" data-aos-duration="1000">{{ block.settings.subtitle }}</h4>
            <a data-aos="fade-up" data-aos-duration="1000" href="{{ block.settings.url }}" class="btn-theme"><span>{{ block.settings.button }}</span></a>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endfor  %}
  <!--== End Divider Area Wrapper ==-->
{% schema %}
  {
    "name": "Section Collection",
    "settings": [
		
	],
	"blocks": [
    {
      "type": "collection",
      "name": "collection",
      "settings": [
		{
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default" : "NEW IN"
        },
		{
          "type": "text",
          "id": "subtitle",
          "label": "SubTitle",
		  "default" : "Maecenas pellentesque posuere mauris tincidunt orci, aliquet nam aliquet purus."	
        },
		{
          "type": "text",
          "id": "button",
          "label": "Button",
		  "default" : "View All"
        },
		{
          "type": "url",
          "id": "url",
          "label": "Url"
        }
      ]
    }
  ]
  }
{% endschema %}