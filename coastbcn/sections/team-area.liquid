{% if section.settings.show_section %}
  <section class="team-area team-creative-area" data-section-id="{{ section.id }}">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="section-title text-center">
            <h2 class="title" data-aos="fade-up" data-aos-duration="1000">{{ section.settings.title }}</h2>
          </div>
        </div>
      </div>
      <div class="row team-members-style2 row-gutter-60">
        {% for block in section.blocks  %}
        <div class="col-sm-6 col-md-4" data-aos="fade-up" data-aos-duration="1000">
          <div class="team-member">
            <div class="thumb">
              <img src="{{ block.settings.image | img_url : 'master' }}" alt="{{ block.settings.image.alt | default : block.settings.title }}">
            </div>
            <div class="content">
              <div class="member-info">
                <h4 class="name">{{ block.settings.title }}</h4>
                {{ block.settings.subtitle }}
                <div class="social-icons">
                  <a href="{{ block.settings.fb }}"><i class="fa lastudioicon-b-facebook"></i></a>
                  <a href="{{ block.settings.tw }}"><i class="fa lastudioicon-b-twitter"></i></a>
                  <a href="{{ block.settings.pin }}"><i class="fa lastudioicon-b-pinterest"></i></a>
                  <a href="{{ block.settings.inst }}"><i class="fa lastudioicon-b-instagram"></i></a>
                </div>
              </div>
            </div>
          </div>
        </div>
        {% endfor  %} 
      </div>
    </div>
  </section>
{% endif %}
{% schema %}
  {
    "name": "Section Team",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default" : "Company Leadership"
		  
        }
	],
	"blocks": [
    {
      "type": "content",
      "name": "content",
      "settings": [
		{
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title"
        },
		{
          "type": "richtext",
          "id": "subtitle",
          "label": "SubTitle" 
        },
		{
          "type": "text",
          "id": "fb",
          "label": "Facebook"
        },
		{
          "type": "text",
          "id": "tw",
          "label": "Twitter"
        },
		{
          "type": "text",
          "id": "pin",
          "label": "Pinterest"
        },
		{
          "type": "text",
          "id": "inst",
          "label": "Instagram"
        }
      ]
    }
  ]
  }
{% endschema %}
