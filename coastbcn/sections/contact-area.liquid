{% if section.settings.show_section %}
  <section class="contact-area contact-about-area bg-img" data-bg-img="{{ section.settings.bg | img_url : '1920x' }}" data-section-id="{{ section.id }}">
      <div class="container-fluid">
        <div class="row row-gutter-0">
          <div class="col-lg-6">
            <div class="col-left">
              <div class="section-title text-center">
                <h2 class="title" data-aos="fade-up" data-aos-duration="1000">{{ section.settings.title }}</h2>
                <p data-aos="fade-up" data-aos-duration="1000">{{ section.settings.subtitle }}</p>
              </div>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="col-right">
              <div class="contact-form" data-aos="fade-up" data-aos-duration="1000">
                {%- assign  formId = 'ContactForm' -%}
                {% form 'contact', id: formId, class : 'contact-form-wrapper' %} 
                  {%- if form.posted_successfully? -%}
                    <p>{{ 'contact.form.post_success' | t }}</p>
                  {%- endif -%}
                <div class="row">
                  <div class="col-lg-12">
                    <div class="section-title">
                      <h2 class="title">{{ section.settings.title_1 }}</h2>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group">
                      <input type="text" class="form-control" id="{{ formId }}-name" name="contact[{{ 'contact.form.name' | t }}]"  placeholder="{{ 'contact.form.name' | t }}*" required>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group">
                      <input  type="email" class="form-control" id="{{ formId }}-email" name="contact[email]" placeholder="{{ 'contact.form.email' | t }}*"  value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" required>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group">
                      <input type="text" class="form-control" id="{{ formId }}-phone" name="contact[{{ 'contact.form.phone' | t }}]" placeholder="{{ 'contact.form.phone' | t }}" value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}">
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group mb-0">
                      <textarea  class="form-control textarea" rows="10" id="{{ formId }}-message" name="contact[{{ 'contact.form.message' | t }}]" placeholder="How can we help?">{% if form.body %}{{ form.body }}{% endif %}</textarea>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group mb-0">
                      <button class="btn btn-theme btn-black" type="submit">{{ 'contact.form.submit' | t }}</button>
                    </div>
                  </div>
                </div>
                {% endform %}
              </div>
              <!-- Message Notification -->
              <div class="form-message"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="canvas-overlay"></div>
    </section>
{% endif %}
{% schema %}
  {
    "name": "Section let’s talk",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },
		{
          "type": "image_picker",
          "id": "bg",
          "label": "Background"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default" : "let’s talk"
		  
        },
		{
          "type": "text",
          "id": "subtitle",
          "label": "SubTitle",
		  "default" : "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc, sit et consectetur fermentum, felis. Proin est amet sit vitae purus."
		  
        }
	]
  }
{% endschema %}

