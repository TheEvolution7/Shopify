<section class="faq-area" data-section-id="{{ section.id }}">
      <div class="container">
        <div class="row row-gutter-90">
          <div class="col-md-12">
            <div class="section-title">
              <h2 class="title">{{ section.settings.title }}</h2>
            </div>
            <div class="accordian-content">
              <div class="accordion" id="accordionExample">
                {% for block in section.blocks  %}
                  <div class="accordion-item">
                    <h2 class="accordion-header" id="heading{{ forloop.index }}">
                      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ forloop.index }}" aria-expanded="{% if forloop.index == 1 %}true{% else %}false{% endif %}" aria-controls="collapse{{ forloop.index }}">{{ block.settings.title }}</button>
                    </h2>
                    <div id="collapse{{ forloop.index }}" class="accordion-collapse collapse {% if forloop.index == 1 %}show{% endif %}" aria-labelledby="heading{{ forloop.index }}" data-bs-parent="#accordionExample">
                      <div class="accordion-body">
                        {{ block.settings.subtitle }}
                      </div>
                    </div>
                  </div>
                {% endfor  %}
              </div>
            </div>
          </div>
          
        </div>
      </div>
    </section>

{% schema %}
  {
    "name": "Section FAQ",
    "settings": [
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default": "FAQ"
        }
	],
	"blocks": [
    {
      "type": "content",
      "name": "content",
      "settings": [
		{
          "type": "text",
          "id": "title",
          "label": "Title"
		  
        },
		{
          "type": "richtext",
          "id": "subtitle",
          "label": "SubTitle"
        }
		
      ]
    }
  ]
  }
{% endschema %}