
{% paginate customer.addresses by 5 %}




<main class="main-content">
  <!--== Start Page Title Area ==-->
  {% include 'breadcrumb' %}
  <!--== End Page Title Area ==-->

  <!--== Start Account Area ==-->
  <div class="account-area">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
			<a class="btn-theme" href="{{ routes.account_url }}"><span>{{ 'customer.account.return' | t }}</span></a>

			<div class="page-width mt-5">
  <div class="grid">
    <div class="grid__item medium-up--two-thirds medium-up--push-one-sixth">
      {% comment %}
        Add address form, hidden by default
      {% endcomment %}
      <div id="AddressNewForm" class="form-vertical hide">
        {% form 'customer_address', customer.new_address %}
          <h2>{{ 'customer.addresses.add_new' | t }}</h2>
        <div class="row">
          <div class="col-md-6 mb-3">
          	<div class="form-group">
              <label class="form-label" for="AddressFirstNameNew">{{ 'customer.addresses.first_name' | t }}</label>
              <input type="text" id="AddressFirstNameNew" class="form-control" name="address[first_name]" value="{{ form.first_name }}" autocomplete="given-name">
            </div>
          </div>
          <div class="col-md-6 mb-3">
          	<div class="form-group">
              <label class="form-label" for="AddressLastNameNew">{{ 'customer.addresses.last_name' | t }}</label>
              <input type="text" id="AddressLastNameNew" class="form-control" name="address[last_name]" value="{{ form.last_name }}" autocomplete="family-name">
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-group">
            	<label class="form-label" for="AddressCompanyNew">{{ 'customer.addresses.company' | t }}</label>
              <input type="text" id="AddressCompanyNew" class="form-control" name="address[company]" value="{{ form.company }}" autocomplete="organization">

            </div>
          </div>
          <div class="col-md-6 mb-3">
          	<div class="form-group">
            	<label class="form-label" for="AddressPhoneNew">{{ 'customer.addresses.phone' | t }}</label>
          <input type="tel" id="AddressPhoneNew" class="form-control" name="address[phone]" value="{{ form.phone }}" autocomplete="phone">

            </div>
          </div>
          <div class="col-md-12 mb-3">
            <div class="form-group">
            	<label class="form-label" for="AddressAddress1New">{{ 'customer.addresses.address1' | t }}</label>
              <input type="text" id="AddressAddress1New" class="form-control" name="address[address1]" value="{{ form.address1 }}" autocomplete="street-address address-line1">

            </div>
          </div>
          <div class="col-md-6 mb-3">
          	<div class="form-group">
            	 <label class="form-label" for="AddressAddress2New">{{ 'customer.addresses.address2' | t }}</label>
              <input type="text" id="AddressAddress2New" class="form-control" name="address[address2]" value="{{ form.address2 }}" autocomplete="street-address address-line2">
           
            </div>
          </div>
          <div class="col-md-6 mb-3">
          	<div class="form-group">
            	 <label class="form-label" for="AddressCityNew">{{ 'customer.addresses.city' | t }}</label>
              <input type="text" id="AddressCityNew" class="form-control" name="address[city]" value="{{ form.city }}" autocomplete="address-level2">
            
            </div>
          </div>
          <div class="col-md-6 mb-3">
          	<div class="form-group">
            	<label class="form-label" for="AddressCountryNew">{{ 'customer.addresses.country' | t }}</label>
              <select id="AddressCountryNew" class="form-control" name="address[country]" data-default="{{ form.country }}" autocomplete="country">{{ all_country_option_tags }}</select>
            
            </div>
          </div>
          <div class="col-md-6 mb-3">
          	<div class="form-group">
            	<label class="form-label" for="AddressZipNew">{{ 'customer.addresses.zip' | t }}</label>
          <input type="text" id="AddressZipNew" class="form-control" name="address[zip]" value="{{ form.zip }}" autocapitalize="characters" autocomplete="postal-code">

            </div>
          </div>
          
          <div class="col-md-12 mb-3">
          	<div class="form-group">
            {{ form.set_as_default_checkbox }}
          <label for="address_default_address_new">{{ 'customer.addresses.set_default' | t }}</label>
		  <br><br>
         <button class="btn-theme" type="submit"><span>{{ 'customer.addresses.add' | t }}</span></button>
        {% endform %}
            </div>
          </div>
        </div>
          
          
          
        <hr>
      </div>

      {% comment %}
        List all customer addresses with a unique edit form.
        Also add pagination in case they have a large number of addresses
      {% endcomment %}
      <ul>
        {% for address in customer.addresses %}
          
             
                <h2 class="h4">Address {{ forloop.index }} ({% if address == customer.default_address %}{{ 'customer.addresses.default' | t }}{% endif %})</h2>
              
            <div id="EditAddress_{{ address.id }}" class="form-vertical hide">
              {% form 'customer_address', address %}

                <h2>{{ 'customer.addresses.edit_address' | t }}</h2>
				<div class="row">
                  <div class="col-md-6 mb-3">
                    <div class="form-group">
                    	<label class="form-label" for="AddressFirstName_{{ form.id }}">{{ 'customer.addresses.first_name' | t }}</label>
                    <input type="text" class="form-control" id="AddressFirstName_{{ form.id }}" name="address[first_name]" value="{{ form.first_name }}" autocomplete="given-name">
                  
                    </div>
                  </div>
                  <div class="col-md-6 mb-3">
                    <div class="form-group">
                    	<label class="form-label" for="AddressLastName_{{ form.id }}">{{ 'customer.addresses.last_name' | t }}</label>
                    <input type="text" class="form-control" id="AddressLastName_{{ form.id }}" name="address[last_name]" value="{{ form.last_name }}" autocomplete="family-name">
                  
                    </div>
                  </div>
                  <div class="col-md-6 mb-3">
                    <div class="form-group">
                    <label class="form-label" for="AddressCompany_{{ form.id }}">{{ 'customer.addresses.company' | t }}</label>
                <input type="text" class="form-control" id="AddressCompany_{{ form.id }}" name="address[company]" value="{{ form.company }}" autocomplete="organization">

                    </div>
                  </div>
                  <div class="col-md-6 mb-3">
                  	<div class="form-group">
                    	<label class="form-label" for="AddressPhone_{{ form.id }}">{{ 'customer.addresses.phone' | t }}</label>
                    	<input type="tel" id="AddressPhone_{{ form.id }}" class="form-control" name="address[phone]" value="{{ form.phone }}" autocomplete="phone">
                  
                    </div>
                  </div>
                  <div class="col-md-12 mb-3">
                    <div class="form-group">
                    	<label class="form-label" for="AddressAddress1_{{ form.id }}">{{ 'customer.addresses.address1' | t }}</label>
                <input type="text" class="form-control" id="AddressAddress1_{{ form.id }}" name="address[address1]" value="{{ form.address1 }}" autocomplete="street-address address-line1">

                    </div>
                  </div>
                  <div class="col-md-12 mb-3">
                    <div class="form-group">
                    	<label class="form-label" for="AddressAddress2_{{ form.id }}">{{ 'customer.addresses.address2' | t }}</label>
                <input type="text" class="form-control" id="AddressAddress2_{{ form.id }}" name="address[address2]" value="{{ form.address2 }}" autocomplete="street-address address-line2">

                    </div>
                  </div>
                  <div class="col-md-6 mb-3">
                    <div class="form-group">
                    <label class="form-label" for="AddressCity_{{ form.id }}">{{ 'customer.addresses.city' | t }}</label>
                    <input type="text" class="form-control" id="AddressCity_{{ form.id }}" name="address[city]" value="{{ form.city }}" autocomplete="address-level2">
                  
                    </div>
                  </div>
                  <div class="col-md-6 mb-3">
                    <div class="form-group">
                    <label class="form-label" for="AddressCountry_{{ form.id }}">{{ 'customer.addresses.country' | t }}</label>
                    <select id="AddressCountry_{{ form.id }}" class="form-control" class="address-country-option" data-form-id="{{ form.id }}" name="address[country]" data-default="{{ form.country }}" autocomplete="country">{{ all_country_option_tags }}</select>
                 
                    </div>
                  </div>
                  <div class="col-md-6 mb-3">
                  	<div id="AddressProvinceContainer_{{ form.id }}" style="display:none">
                    <div class="form-group">
                    	<label class="form-label" for="AddressProvince_{{ form.id }}">{{ 'customer.addresses.province' | t }}</label>
                  		<select id="AddressProvince_{{ form.id }}" class="form-control" name="address[province]" data-default="{{ form.province }}" autocomplete="address-level1"></select>
               
                    </div>
                   </div>
                  </div>
                  
                  <div class="col-md-6 mb-3">
                  	<div class="form-group">
                    	  <label class="form-label" for="AddressZip_{{ form.id }}">{{ 'customer.addresses.zip' | t }}</label>
                    <input type="text" id="AddressZip_{{ form.id }}" class="form-control" name="address[zip]" value="{{ form.zip }}" autocapitalize="characters" autocomplete="postal-code">
                 
                    </div>
                  </div>
                  
                </div>  
                
                

              {% if address != customer.default_address %}
                {{ form.set_as_default_checkbox }}
                <label for="address_default_address_{{ form.id }}">{{ 'customer.addresses.set_default' | t }}</label>
              {% endif %}
              	<button class="btn-theme mb-3" type="submit"><span>{{ 'customer.addresses.update' | t }}</span></button> 
              {% endform %}
              <form class="address-delete-form" method="post" action="/account/addresses/{{ address.id }}" >
                <input type="hidden" name="_method" value="delete">
                <input type="hidden" name="return_to" value="/account" />  
                <button class="btn-theme" type="submit" data-target="{{ address.url }}"  data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}"><span>{{ 'customer.addresses.delete' | t }}</span></button>

              </form>
              <hr>
            </div>
         
        {% endfor %}
     

      {%- if paginate.pages > 1 -%}
        {% include 'pagination', paginate: paginate %}
      {%- endif -%}
    </div>
  </div>

</div>
       
        </div>
      </div>
    </div>
  </div>

  <!--== End Account Area ==-->
</main>

{% endpaginate %}

