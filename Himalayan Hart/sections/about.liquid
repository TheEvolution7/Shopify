{% if section.settings.show_section %}
<section class="about-three" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <div class="about-three__image">
          <img src="{{ section.settings.image_1 | img_url : 'master' }}" alt="{{ section.settings.image_1.alt | default : section.settings.title }}">
        </div>
      </div>
      <div class="col-lg-6">
        <div class="about-three__content">
          <div class="block-title">
            <div class="block-title__image"></div>
            <p>{{ section.settings.title }}</p>
            <h3>{{ section.settings.heading }}</h3>
          </div>
          <ul class="about-three__list list-unstyled">
            {{ section.settings.des }}
          </ul>
          <div class="about-three__summery">
            {{ section.settings.text }}
          </div>
          <div class="about-three__signs">
            <img src="{{ section.settings.image_2 | img_url : 'master' }}" alt="{{ section.settings.image_1.alt | default : section.settings.title }}">
            <img src="{{ section.settings.image_3 | img_url : 'master' }}" alt="{{ section.settings.image_1.alt | default : section.settings.title }}">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endif %}
{% schema %}
  {
    "name": "Section About",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },
		{
          "type": "image_picker",
          "id": "image_1",
          "label": "Image 1"
        },
      	{
          "type": "image_picker",
          "id": "image_2",
          "label": "Image 2"
        },
		{
          "type": "image_picker",
          "id": "image_3",
          "label": "Image 3"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default" : "Get to know us"
        },
		
		{
          "type": "text",
          "id": "heading",
          "label": "Heading",
		  "default" : "30 Years Agriculture Experience"
        },
		{
          "type": "html",
          "id": "des",
          "label": "Description"
        },
		{
          "type": "richtext",
          "id": "text",
          "label": "Text",
		  "default": " <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit sed deiusmod tempor incididunt ut labore et dolore magna aliqua. Donec scelerisque dolor id nunc dictum, interdum. </p>"
        }
	]
	
  }
{% endschema %}