{% if section.settings.show_section %}
  <section class="feature-two" data-section-id="{{ section.id }}">
    <div class="container">
      <div class="row">
      {% for block in section.blocks %}
        <div class="col-md-12 col-lg-4">
          <div class="feature-two__box">
            {{ block.settings.icon }}
            <p>{{ block.settings.title }}</p>
            <h3>{{ block.settings.heading }}</h3>
          </div>
        </div>
      {% endfor %}  
      </div>
    </div>
  </section>
{% endif %}
{% schema %}
  {
    "name": "Section Featured",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        }
	],
	"blocks": [
    {
      "type": "feature",
      "name": "feature",
      "settings": [
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default" : "Feature"
        },
		{
          "type": "text",
          "id": "heading",
          "label": "Heading",
		  "default" : "Organic Tea<br> from our garden"
        },
		{
          "type": "text",
          "id": "icon",
          "label": "Class Icon"
        },
		{
          "type": "url",
          "id": "url",
          "label": "Url"
        }
      ]
    }
  ]
  }
{% endschema %}
