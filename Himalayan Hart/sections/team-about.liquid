{% if section.settings.show_section %}
	<section class="team-one" data-section-id="{{ section.id }}">
  <img src="{{ 'team-bg-1-1.png' | asset_url }}" alt="" class="team-one__bg">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-lg-12 col-xl-5">
        <div class="team-one__content">
          <div class="block-title">
            <div class="block-title__image"></div>
            <p>{{ section.settings.title }}</p>
            <h3>{{ section.settings.heading }}</h3>
          </div>
          <div class="team-one__summery">
            {{ section.settings.text }}
          </div>

          <div class="team-one__nav">
            <div class="swiper-button-prev" id="team-one__swiper-button-next"><i class="agrikon-icon-left-arrow"></i>
            </div>
            <div class="swiper-button-next" id="team-one__swiper-button-prev"><i class="agrikon-icon-right-arrow"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="team-one__carousel-wrap">
    <div class="thm-swiper__slider swiper-container" data-swiper-options='{"spaceBetween": 0, "slidesPerView": 1, "slidesPerGroup": 1, "autoplay": { "delay": 5000 }, "navigation": {
                                                                          "nextEl": "#team-one__swiper-button-next",
                                                                          "prevEl": "#team-one__swiper-button-prev"
                                                                          },"breakpoints": {
                                                                          "0": {
                                                                          "spaceBetween": 0,
                                                                          "slidesPerView": 1,
                                                                          "slidesPerGroup": 1
                                                                          },
                                                                          "640": {
                                                                          "spaceBetween": 30,
                                                                          "slidesPerView": 2,
                                                                          "slidesPerGroup": 2
                                                                          },
                                                                          "992": {
                                                                          "spaceBetween": 30,
                                                                          "slidesPerView": 3,
                                                                          "slidesPerGroup": 3
                                                                          },
                                                                          "1200": {
                                                                          "spaceBetween": 30,
                                                                          "slidesPerView": 3,
                                                                          "slidesPerGroup": 3
                                                                          }
                                                                          }}'>
      <div class="swiper-wrapper">
       {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="team-card">
            <div class="team-card__image">
              <img src="{{ block.settings.image | img_url : 'master' }}" alt="{{ block.settings.image.alt | default : block.settings.title }}">
              <div class="team-card__social">
                <a href="{{ block.settings.fb }}"><i class="fab fa-facebook-f"></i></a>
                <a href="{{ block.settings.tw }}"><i class="fab fa-twitter"></i></a>
                <a href="{{ block.settings.linkedin }}"><i class="fab fa-linkedin-in"></i></a>
              </div>
            </div>
            <h3>{{ block.settings.title }}</h3>
            {{ block.settings.subtitle }}
          </div>
        </div>
       {% endfor %} 
      </div>
    </div>
  </div>
</section>
{% endif %}
{% schema %}
  {
    "name": "Section Team",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default" : "meet the team"
		  
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Title",
          "default" : "Expert Farmers"
        },
		{
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default" : "<p>Lorem ipsum is simply free text available. Aenean eu leo quam. Pellentesque ornare sem lacinia quam venenatis vestibulum. Aenean lacinia bibendum.</p>"
        }
	],
	"blocks": [
    {
      "type": "content",
      "name": "content",
      "settings": [
		{
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title"
        },
		{
          "type": "richtext",
          "id": "subtitle",
          "label": "SubTitle" 
        },
		{
          "type": "text",
          "id": "fb",
          "label": "Facebook"
        },
		{
          "type": "text",
          "id": "tw",
          "label": "Twitter"
        },
		{
          "type": "text",
          "id": "linkedin",
          "label": "linkedin"
        }
		
      ]
    }
  ]
  }
{% endschema %}