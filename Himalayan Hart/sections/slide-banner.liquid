<section class="main-slider main-slider__two" data-section-id="{{ section.id }}">
  <div class="main-slider__line-1"></div>
  <div class="main-slider__line-2"></div>
  <div class="main-slider__line-3"></div>
  <div class="main-slider__line-4"></div>
  <div class="main-slider__line-5"></div>
  <div class="main-slider__line-6"></div>
  <div class="swiper-container thm-swiper__slider" data-swiper-options='{
                                                                        "slidesPerView": 1,
                                                                        "loop": true,
                                                                        "effect": "fade",
                                                                        "autoplay": {
                                                                        "delay": 5000
                                                                        },
                                                                        "navigation": {
                                                                        "nextEl": "#main-slider__swiper-button-next",
                                                                        "prevEl": "#main-slider__swiper-button-prev"
                                                                        }
                                                                        }'>
    <div class="swiper-wrapper">

      {% for block in section.blocks %}
      <div class="swiper-slide">
        <div class="image-layer" style="background-image: url({{ block.settings.image | img_url : 'master' }});">
        </div>

        <div class="container">
          <div class="row">
            <div class="col-xl-12 text-center">
              <span class="tagline">{{ block.settings.title }}</span>
              <h2>{{ block.settings.heading }}</h2>
              <a href="{{ block.settings.url }}" class=" thm-btn">{{ block.settings.button }}</a>
            </div>
          </div>
        </div>
      </div>
      {% endfor %} 
    </div>

    <div class="main-slider__nav">
      <div class="swiper-button-prev" id="main-slider__swiper-button-next"><i class="agrikon-icon-left-arrow"></i>
      </div>
      <div class="swiper-button-next" id="main-slider__swiper-button-prev"><i class="agrikon-icon-right-arrow"></i></div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Section Slide Banner",
    "settings": [
	
	],
	"blocks": [
    {
      "type": "banner",
      "name": "banner",
      "settings": [
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default" : "Welcome to Himalayan Hart"
        },
		{
          "type": "text",
          "id": "heading",
          "label": "Heading",
		  "default" : "The <br>Top Soil Tea"
        },
		{
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
		{
          "type": "text",
          "id": "button",
          "label": "Button",
		  "default" : "Discover More"
        },
		{
          "type": "url",
          "id": "url",
          "label": "Url"
        }
      ]
    }
  ]
  }
{% endschema %}
