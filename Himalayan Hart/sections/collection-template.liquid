
{% paginate collection.products by 8 %}
  <section class="blog-grid">
    <div class="container">
      <div class="row">
        {% assign all_products = collection.products %}
        {% for product in all_products %}
        <div class="col-md-6 col-lg-4 col-xl-3">
          {% include 'product-card-list', product: product %}
        </div>
        {% endfor %}   
      </div>
      <div class="text-center more-btn__box"> 
        {%- if paginate.pages > 1 -%}
        	{% include 'pagination', paginate: paginate %}
        {%- endif -%}
      </div>
    </div>
  </section>

  <section class="call-to-action__two jarallax" data-jarallax data-speed="0.3" data-imgPosition="50% 50%">
    <img class="call-to-action__two__bg jarallax-img" src="{{ section.settings.bg | img_url : 'master' }}" alt="{{ section.settings.bg.alt | default : section.settings.title }}" />
    <div class="container">
      <h3>{{ section.settings.title }}</h3>
      <a href="{{ section.settings.url }}" class="thm-btn">{{ section.settings.button }}</a>
    </div>
  </section>
  <section class="service-two service-two__home-two">
    <div class="service-two__bottom-curv"></div>
    <div class="container">
      <div class="block-title text-center">
        <div class="block-title__image"></div>
        <p>{{ section.settings.text }}</p>
        <h3>{{ section.settings.heading }}</h3>
      </div>
      <div class="row">
  		{% for block in section.blocks %}
          <div class="col-sm-12 col-md-6 col-lg-3">
            <div class="service-two__card">
              <div class="service-two__card-image">
                <img src="{{ block.settings.image | img_url : 'master' }}" alt="{{ block.settings.image.alt | default : block.settings.title }}">
              </div>
              <div class="service-two__card-content">
                <h3><a href="{{ block.settings.url }}">{{ block.settings.title }}</a></h3>
                {{ block.settings.subtitle }}
              </div>
            </div>
          </div>
         {% endfor %}
      </div>
    </div>
  </section>

  <section class="call-to-action__three jarallax" data-jarallax data-speed="0.3" data-imgPosition="50% 50%">
    <img class="call-to-action__three__bg jarallax-img" src="{{ 'cta-1-bg-1.jpg' | asset_url }}" alt="parallax-image" />
    <div class="container">
      <div class="row">
        <div class="col-lg-5">
          <div class="call-to-action__three-image">
             <img src="{{ section.settings.image_1 | img_url : 'master' }}" alt="{{ section.settings.image_1.alt | default : section.settings.title }}">
            <img src="{{ section.settings.image_2 | img_url : 'master' }}" alt="{{ section.settings.image_2.alt | default : section.settings.title }}">
          </div>
        </div>
        <div class="col-lg-7">
          <div class="call-to-action__three-content">
            <h3>{{ section.settings.title_2 }}</h3>
            <a href="{{ section.settings.url_2 }}" class="thm-btn">{{ section.settings.button_2 }}</a>
          </div>
        </div>
      </div>
    </div>
  </section>

{% endpaginate %}



