{% if section.settings.show_section %}
  <section class="about-two" data-section-id="{{ section.id }}">
    <img src="{{ 'about-2-bg-1.png' | asset_url }}" alt="" class="about-two__bg">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <div class="about-two__images">
            <img src="{{ section.settings.image_1 | img_url : 'master' }}" alt="{{ section.settings.image_1.alt | default : section.settings.title }}">
            <img src="{{ section.settings.image_2 | img_url : 'master' }}" alt="{{ section.settings.image_2.alt | default : section.settings.title }}">
          </div>
        </div>
        <div class="col-lg-6">
          <div class="about-two__content">
            <div class="block-title">
              <div class="block-title__image"></div>
              <p>{{ section.settings.title }}</p>
              <h3>{{ section.settings.heading }}</h3>
            </div>
            <div class="about-two__summery">
              {{ section.settings.text }}
            </div>

  </section>
{% endif %}
{% schema %}
  {
    "name": "Section Our story",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },
		{
          "type": "image_picker",
          "id": "image_1",
          "label": "Image 1"
        },
      	{
          "type": "image_picker",
          "id": "image_2",
          "label": "Image 2"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default" : "Our story"
        },
		{
          "type": "text",
          "id": "heading",
          "label": "Heading",
		  "default" : "We introduce our famous Darjeeling Organic Tea from India."
        },
		{
          "type": "richtext",
          "id": "text",
          "label": "Text",
		  "default": " <p>Darjeeling is very famous for producing high quality Tea around the world, It has a quiet range of products and quality including Green Tea, Black Tea, White Tea and many moreâ€¦. Our focus is very simple, we want to bring the best tea to the world </p>"
        }
	]
	
  }
{% endschema %}