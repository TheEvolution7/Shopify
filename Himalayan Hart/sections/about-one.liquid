{% if section.settings.show_section %}
<section class="about-one" data-section-id="{{ section.id }}">
  <img src="{{ 'about-bg-icon-1-1.png' | asset_url }}" class="about-one__bg-shape-1" alt="">
  <div class="container">
    <div class="row">
      <div class="col-lg-5">
        <div class="about-one__images">
          <img src="{{ section.settings.image_1 | img_url : 'master' }}" alt="{{ section.settings.image_1.alt | default : section.settings.title }}">
          <img src="{{ section.settings.image_2 | img_url : 'master' }}" alt="{{ section.settings.image_2.alt | default : section.settings.title }}">
          <div class="about-one__count wow fadeInLeft" data-wow-duration="1500ms">
            <span>{{ section.settings.title }}</span>
            <h4>{{ section.settings.heading }}</h4>
          </div>
        </div>
      </div>
      <div class="col-lg-7">
        <div class="about-one__content">
          <div class="block-title text-left">
            <div class="block-title__image"></div>
            <p>{{ section.settings.title_2 }}</p>
            <h3>{{ section.settings.heading_2 }}</h3>
          </div>
          <div class="about-one__tagline">
            <p>{{ section.settings.subheading }}</p>
          </div>
          <div class="about-one__summery">
            {{ section.settings.text }}
          </div>
          <div class="about-one__icon-row">
            <div class="row">
              <div class="col-lg-6">
                <div class="about-one__box">
                  <i class="agrikon-icon-farmer"></i>
                  <h4><a href="#">{{ section.settings.title_icon_1 }}</a></h4>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="about-one__box">
                  <i class="agrikon-icon-agriculture"></i>
                  <h4><a href="#">{{ section.settings.title_icon_2 }}</a></h4>
                </div>
              </div>
            </div>
          </div>
          <a href="{{ section.settings.url }}" class="thm-btn">{{ section.settings.button }}</a>
        </div>
      </div>
    </div>
  </div>
</section>
{% endif %}
