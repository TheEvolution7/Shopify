<header class="main-header">
<div class="topbar">
<div class="container">
<div class="topbar__left">
<div class="topbar__social">
  {%- assign socials = "Facebook Twitter Pinterest Instagram Tumblr Snapchat YouTube Vimeo" | split: ' ' -%}
  {%- for social in socials -%}
  {%- assign social_link = social | prepend: 'social_' | append: '_link' | downcase -%}
  {%- assign icon_link = social | prepend: 'icon-' | downcase -%}
  {%- if settings[social_link] != blank -%}
  <a href="{{ settings[social_link] | escape }}">{%- include icon_link -%}</a>
  {%- endif -%}
  {%- endfor -%}  
</div>
{{ section.settings.title }}
</div>
<div class="topbar__right">
<a href="mailto:{{ section.settings.email }}"><i class="agrikon-icon-email"></i><span class="__cf_email__">{{ section.settings.email }}</span></a>
<a href="#"><i class="agrikon-icon-clock"></i>{{ section.settings.time }}</a>
</div>
</div>
</div>
<nav class="main-menu">
<div class="container">
<div class="logo-box">
<a href="{{ routes.root_url }}" aria-label="logo image"><img src="{{ section.settings.logo | img_url: 'medium' }}" alt="{{ section.settings.logo.alt | default: shop.name }}" width="153"></a>

</div>
<ul class="main-menu__list">
{% for link in linklists[section.settings.main_linklist].links %}
  <li  {% if link.active %} class="current" {% endif %}>
  	<a href="{{ link.url }}">{{ link.title | escape }}</a>
  </li>
{% endfor %}
</ul>

<div class="main-header__info">
<a href="#" class="search-toggler main-header__search-btn"><i class="agrikon-icon-magnifying-glass"></i></a>
<!-- <a class="main-header__cart-btn" href="{{ routes.cart_url }}"><i class="agrikon-icon-shopping-cart"></i></a> -->
<a class="main-header__cart-btn" href="javascript:;" data-toggle="modal" data-target="#modal-cart"><i class="agrikon-icon-shopping-cart"></i> <span data-ajax-cart-bind-state="cart.item_count">{{ cart.item_count }}</span></a>
  {% if customer %}
  	<a href="{{ routes.account_url }}" class="user-icon-menu dropdown"><i class="fas fa-user-circle"></i></a>
  {% else %}
  	<a href="{{ routes.account_login_url }}" class="user-icon-menu dropdown"><i class="fas fa-user-circle"></i></a>
  {% endif %}
  
<a href="tel:{{ section.settings.phone }}" class="main-header__info-phone">
<i class="agrikon-icon-phone-call"></i>
<span class="main-header__info-phone-content">
<span class="main-header__info-phone-text">{{ section.settings.text }}</span>
<span class="main-header__info-phone-title">{{ section.settings.phone }}</span>
</span>
</a>
</div>
 <span class="fa fa-bars mobile-nav__toggler"></span>
</div>
</nav>

</header>
<div class="stricky-header stricked-menu main-menu">
<div class="sticky-header__content"></div>
</div>


