        <!---Page-section -->
        <section class="Sign-in" style="background-color: #1c1c1c;">
            <div class="parallax-container js-text-parallax">
                <div class="fx-wrap fx-section-se" data-x="200">
                    <h3 class="fx-target">{{ 'customer.login.title' | t }}</h3>
                </div>
            </div>
            <div class="auto-container">
                <div class="row">
                    <div class="col-xl-12 col-lg-12">
                        <div class="col-lg-12 col-md-12 col-sm-12 content-column">
                            <div class="content_block_3">
                                <div class="content-box">
                                    <div class="billing_details" id="Sign-Inn">
                                        <div class="billing_title">
                                            <h2>{{ 'customer.login.title' | t }}</h2>
                                        </div>
                                         {% form 'customer_login',class : 'billing_details_form billing_details_form-1' ,novalidate: 'novalidate' %}
                                            <div class="row">
                                                <div class="col-xl-12">
                                                    <div class="billing_input_box">
                                                       <input type="email" name="customer[email]" id="customerEmail" placeholder="{{ 'customer.login.email' | t }}">
                                                    </div>
                                                </div>
                                                <div class="col-xl-12">
                                                    <div class="billing_input_box">
                                                       <input autocomplete="off" value=""   type="password" name="customer[password]" id="customerPassword" placeholder="{{ 'customer.login.password' | t }}">
                                                    </div> 
                                                </div>
                                               {% if form.password_needed %}
                                                	<p><a href="javascript:;" id="forgotPassword">Forgot your password?</a></p>
                                               {% endif %}
                                                <p>{{ 'Create Account' | customer_register_link }}</p>
                                            
                                            </div>
                                            <div class="row">
                                                <div class="col-xl-12">
                                                    <div class="place_order_btn">
                                                        <button class="theme-btn-one" type="submit">{{ 'customer.login.sign_in' | t }}</button>
                                                    </div>
                                                </div>
                                            </div>
                                         {% endform %}    
                                    </div>
                                    <div class="billing_details billing_details-2" id="Forgot-pass" style="display: none;">
                                        <div class="billing_title">
                                            <h2 >For Got PassWord</h2>
                                        </div>
                                          {% form 'recover_customer_password',class : 'billing_details_form' %}
                                            <div class="row">
                                                <div class="col-xl-12">
                                                    <div class="billing_input_box">
                                                       <input type="email" value="" name="email" id="RecoverEmail" placeholder="{{ 'customer.recover_password.email' | t }}">
                                                    </div>
                                                </div>
                                            </div>
                                        	<div class="row">
                                            <div class="col-xl-12">
                                                <div class="place_order_btn">
                                                    <button class="theme-btn-one" id="Submit-in" type="button">Back</button>
                                                    <button class="theme-btn-one"  type="submit">Submit</button>
                                                    
                                                </div>
                                            </div>
                                        </div>
                                        {% endform %}   
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </section>
        <!-- End -Page-->