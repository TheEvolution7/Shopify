        <!---Page-section -->
        <section class="Sign-in" style="background-color: #1c1c1c;">
            <div class="parallax-container js-text-parallax">
                <div class="fx-wrap fx-section-se" data-x="200">
                    <h3 class="fx-target">{{ page_title }}</h3>
                </div>
            </div>
            <div class="auto-container">
                <div class="row">
                    <div class="col-xl-12 col-lg-12">
                        <div class="col-lg-12 col-md-12 col-sm-12 content-column">
                            <div class="content_block_3">
                                <div class="content-box">
                                    <div class="billing_details" id="Sign-Inn">
                                        <div class="billing_title">
                                            <h2>{{ 'customer.reset_password.title' | t }}</h2>
                                           	<p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>
                                        </div>
                                      	{% form 'reset_customer_password',class : 'billing_details_form billing_details_form-1' %}
                                            <div class="row">
                                                <div class="col-xl-12">
                                                    <div class="billing_input_box">
                                                       <input type="password" value="" name="customer[password]" id="ResetPassword" placeholder="{{ 'customer.reset_password.password' | t }}">
                                                    </div>
                                                </div>
                                                <div class="col-xl-12">
                                                    <div class="billing_input_box">
                                                       <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
                                                    </div> 
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-xl-12">
                                                    <div class="place_order_btn">
                                                        <button class="theme-btn-one" type="submit">{{ 'customer.reset_password.submit' | t }}</button>
                                                    </div>
                                                </div>
                                            </div>
                                         {% endform %}    
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End -Page-->