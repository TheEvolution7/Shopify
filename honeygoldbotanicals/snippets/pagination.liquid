{% comment %}
    Renders a pagination bar

    Accepts:
    - paginate: {Object} Paginate Liquid object (required)

    Usage:
    {% include 'pagination', paginate: paginate %}
{% endcomment %}
    <ul class="pagination centred">
      {%- if paginate.previous-%}
        <li><a href="{{ paginate.previous.url }}" disabled>{% include 'icon-arrow-left' %}</a></li>
      {% else %}
        <li><a disabled="disabled">{% include 'icon-arrow-left' %}</a></li>
      {% endif %}
      {%- for part in paginate.parts -%}
          {%- if part.is_link -%}
     		 <li><a href="{{ part.url }}">{{ part.title }}</a></li>
          {%- else -%}
            {%- if part.title == paginate.current_page -%}
      			<li><a class="current">{{ part.title }}</a></li>
            {%- else -%}
             	<li><a>{{ part.title }}</a></li>
            {%- endif -%}
          {%- endif -%}
        {%- endfor -%}
      {%- if paginate.next -%}
        <li><a href="{{ paginate.next.url }}">{% include 'icon-arrow-right' %}</a></li>   
      {% else %}
        <li><a disabled="disabled">{% include 'icon-arrow-right' %}</a></li>
      {% endif %}
    </ul>
<style type="text/css">
    a[disabled="disabled"] {
        pointer-events: none;
    }
</style>