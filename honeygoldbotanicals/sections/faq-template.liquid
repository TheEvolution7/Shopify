<!--Page Title-->
        <section class="page-title centred" style="background-image: url('{{ section.settings.image | img_url : '1920x' }}');">
            <div class="auto-container">
                <div class="content-box">
                    <div class="title">
                        <h1 class="title-fix">{{ page.title }}</h1>
                    </div>
                    <ul class="bread-crumb clearfix">
                        <li><a href="{{ routes.root_url }}">Home</a></li>
                        <li class="see">{{ page.title }}</li>
                    </ul>
                </div>
            </div>
        </section>
        <!--End Page Title-->

        
        <!-- faqs-section -->
        <section class="faq-section" style="background-color: #1c1c1c;">
            <div class="parallax-container js-text-parallax">
                <div class="fx-wrap fx-section-3" data-x="200">
                    <h3 class="fx-target">{{ page.title }}</h3>
                </div>
            </div>
            <div class="auto-container">
                <div class="col-12">
                    <div id="accordion">
                      {%- for block in section.blocks -%}
                        <div class="card">
                            <div class="card-header" id="heading-{{ forloop.index }}">
                                <h5 class="mb-0">
                                    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse-{{ forloop.index }}" aria-expanded="false" aria-controls="collapse-{{ forloop.index }}">
                                        {{ block.settings.title }}
                                    </button>
                                </h5>
                            </div>
                            <div id="collapse-{{ forloop.index }}" class="collapse" aria-labelledby="heading-{{ forloop.index }}" data-parent="#accordion">
                                <div class="card-body">
                                     {{ block.settings.text }}                        
                                </div>
                            </div>
                        </div>
                      {%- endfor -%}  
                    </div>                   
                </div>
            </div>
        </section>
        <!-- faqs-section end -->
{% schema %}
  {
    "name": "Section Faqs",
    "settings": [
		{
          "type": "image_picker",
          "id": "image",
          "label": "Banner"
        }
		],
"blocks": [
    {
      "type": "faqs",
      "name": "Faqs",
      "settings": [
		{
          "type": "text",
          "id": "title",
          "label": "Title"
    	},
        {
            "type": "richtext",
            "id": "text",
            "label": "Text"   
        }       
      ]
    }
  ]
  }
{% endschema %}
