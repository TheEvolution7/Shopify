{% schema %}
{
"name": "Trending Products",
"class": "index-section",
  "settings": [
	{
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Sale Off"
    },
	{
      "type": "richtext",
      "id": "text",
      "label": "Text",
	  "default": "<p>Mirum est notare quam littera gothica quam nunc putamus parum claram!</p>"
    },
    {
      "id": "collection",
      "type": "collection",
      "label": "Collection"
    },
	{
      "type": "text",
      "id": "products_tab_count",
      "label": "No of products to show",
      "default": "8"
    }
  ]

}
{% endschema %}
