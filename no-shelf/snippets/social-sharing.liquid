
		<ul>
          {% if settings.share_facebook %}
          <li><a href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}"><i class="fab fa-facebook-f"></i></a></li>
          {% endif %}
          {% if settings.share_twitter %}
            <li><a href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}"><i class="fab fa-twitter"></i></a></li>
          {% endif %}
          {% if settings.share_pinterest %}
            <li><a href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}"><i class="fab fa-pinterest"></i></a></li>
          {% endif %}
        </ul>
