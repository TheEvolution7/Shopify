			<section class="s-instagram">
                <div class="s-instagram-figure">
                    <div class="s-instagram-grid">
                      {%- for block in section.blocks -%}
                        <div class="s-instagram-layer">
                            <div class="s-instagram-block"
                                style="background-image: url({{ block.settings.image | img_url: '500x'}});">
                            </div>
                        </div>
                      {%- endfor -%}  
                    </div>
                    <div class="s-instagram-scroller"></div>
                </div>
                <div class="s-instagram-text" data-effect="block">
                    <h3>{{ section.settings.heading }}</h3>
                    <a href="{{ section.settings.link }}">
                        <h2>{{ section.settings.title }}</h2>
                    </a>
                        {{ section.settings.description }}
                    <a class="f-bp" href="{{ section.settings.link }}"
                        target="_blank" rel="noopener"> <svg class="f-bp-arrow" viewBox="0 0 6 10">
                            <path
                                d="M0,9.9C1.4,8.3,2.9,5.6,3.4,5C2.9,4.4,1.4,1.7,0,0.1L0.1,0C1.5,1.6,5.8,4.8,6,5 c-0.2,0.2-4.5,3.4-5.9,5L0,9.9z" />
                        </svg> <i class="f-bp-label">{{ section.settings.button }}</i> <svg class="f-bp-arrow" viewBox="0 0 6 10">
                            <path
                                d="M0,9.9C1.4,8.3,2.9,5.6,3.4,5C2.9,4.4,1.4,1.7,0,0.1L0.1,0C1.5,1.6,5.8,4.8,6,5 c-0.2,0.2-4.5,3.4-5.9,5L0,9.9z" />
                        </svg> </a>
                </div>
                <div class="s-instagram-background" data-background=""></div>
            </section>
{% schema %}
{
  "name": "Instagram",
  "max_blocks": 20,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Instagram"
    },
	{
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
	{
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Become a part of our story, be a NOBODY....</p>"
    },
	{
      "type": "text",
      "id": "button",
      "label": "Title Button",
      "default": "About us"
    },
	{
      "type": "url",
      "id": "link",
      "label": "Link"  
    }
  ],
  "blocks": [
    {
      "type": "logo_image",
      "name": "Images",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}