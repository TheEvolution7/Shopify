<section class="s-banner">
            <div class="s-banner-container a-left">
                <div class="s-banner-text" data-effect="block">
                    <h3>{{ section.settings.heading }}</h3>
                    <h2>{{ section.settings.title }}</h2>
                   {{ section.settings.description }}
                </div>
                <div class="s-banner-figure">
                    <div class="s-banner-src"> <img src="{{ section.settings.image-1 | img_url: '500x' }}" alt="{{ section.settings.image-1.alt | img_url: '500x' }}"> </div>
                    <div class="s-banner-src"> <img src="{{ section.settings.image-2 | img_url: '500x' }}"
                            alt="Straight cuts<br /> &amp; <em>bold colours</em>"
                            data-zoom="{{ section.settings.image-2 | img_url: '500x' }}" data-cursor="zoom">
                    </div>
                </div>
                <div class="s-banner-background" data-background="#fcfaf2"></div>
            </div>
        </section>

{% schema %}
{
  "name": "Section Lookbook 3",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "SS '20"
    },
 	{
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Straight cuts<br /> &amp; <em>bold colours</em>"
    },
	{
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Colourful suede jackets and reinvented trench coats are what characterizes the spring summer collection of Famous Nobody</p>"
    },
	{		
       "type": "image_picker",
       "id": "image-1",
       "label": "Image 1"
    },
	{
       "type": "image_picker",
       "id": "image-2",
       "label": "Image 2"
     }
  ] 
}
{% endschema %}

