<section class="py-10 py-lg-15 bg-img-cover-center bg-custom-top" style="background-image: url('{{ section.settings.bg | img_url : '1920x' }}');">
  <div class="container">
   <div class="row">
    <div class="col-xl-5">
      <div class="col-lg-auto ml-lg-auto">
        <h1 class="fs-sm-40 mb-11 text-center">{{ shop.name }} <br>{{ section.settings.title }}</h1>
        <h2 class="password__form-heading h4" id="password-modal-heading">{{ section.settings.newsletter_form_heading | escape }}</h2>
        <p style="text-align:center;">{{ section.settings.newsletter_form_subheading }}</p>
        <div class="row overflow-hidden">
          <div class="col-md-12">
            {% form 'customer', id: 'ContactPassword'%}
            {%- assign formId = 'PasswordNewsletterForm' -%}
            	<input type="hidden" name="contact[tags]" value="prospect, password page">
            {%- if form.posted_successfully? -%}
            <p class="form-message form-message--success" tabindex="-1" data-form-status>
              {{ 'general.password_page.signup_form_success' | t }}
            </p>
            {%- endif -%}
            <div class="contact-form contact-form--4 heading-hover">
              <div class="input-group"> 
                <input
                       type="email"
                       class="form-control"
                       name="contact[email]"
                       id="{{ formId }}-email"
                       class="input-group__field {% if form.errors contains 'email' %} input--error{% endif %}"
                       placeholder="{{ 'general.password_page.signup_form_email_label' | t }}"
                       {%- if form.errors contains 'email' -%}
                       aria-invalid="true"
                       aria-describedby="{{ formId }}-email-error"
                       data-form-status
                       {%- endif -%}>
                <span class="input-group__btn">
                  <button type="submit" class="btn btn-primary text-uppercase letter-spacing-05">{{ section.settings.newsletter_button_text | escape }}</button>
                </span>
              </div>
            </div>
            {%- if form.errors contains 'email' -%}
            <span id="{{ formId }}-email-error" class="input-error-message">
              <span class="visually-hidden">{{ 'general.accessibility.error' | t }} </span>
              {% include 'icon-error' %}
              <span>{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}.</span>
            </span>
            {%- endif -%}
            {% endform %}
          </div>
        </div>
      </div>
    </div>
    </div>
  	<br><br>
   <div class="row">
    <div class="col-xl-5">
      <div class="col-lg-auto ml-lg-auto">
      <h2 class="password__form-heading h4" id="password-modal-heading">
        {{ 'general.password_page.login_form_heading' | t }}
      </h2>
      <div class="row overflow-hidden">
        <div class="col-md-12">
          {% form 'storefront_password', class: 'form-single-field' %}
          {%- assign formId = 'PasswordLoginForm' -%}
          <div class="input-group {% if form.errors %}input-group--error{% endif %}"> 
            <input type="password" name="password"
                   id="Password"
                   class="form-control"
                   class="input-group__field input--content-color {% if form.errors %}input--error{% endif %}"
                   placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}"
                   data-login-field
                   autocomplete="off"
                   aria-labelledby="PasswordLabel {% if form.errors %} {{ formId }}-password-error{% endif %}"
                   {% if form.errors %}
                   data-error="password"
                   aria-invalid="true"
                   {%- endif -%}
                   >
            <span class="input-group__btn">
              <button type="submit" name="commit" class="btn btn-primary text-uppercase letter-spacing-05">
                {{ 'general.password_page.login_form_submit' | t }}
              </button>
            </span>
          </div>
          {%- if form.errors -%}
          <span id="{{ formId }}-password-error" class="input-error-message">
            <span class="visually-hidden">{{ 'general.accessibility.error' | t }} </span>
            <span>{{ form.errors.messages['form'] }}</span>
          </span>
          {%- endif -%}
          {% endform %}
          <p class="password-content">{{ 'general.password_page.admin_link_html' | t }}</p>
        </div>
      </div>
    </div>
    </div>
   </div>
  </div>
</section>
