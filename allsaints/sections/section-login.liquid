<section class="pb-11 pb-lg-15 pt-10" data-section-id="{{ section.id }}">
  <div class="container">
    <h2 class="fs-sm-40 mb-10 text-center">{{ 'customer.login.title' | t }}</h2>
    <div class="row no-gutters">
      <div class="col-lg-10 mx-auto">
        <div class="row no-gutters">
          <div class="col-lg-6 mb-8 mb-lg-0 pr-xl-2">
            <h3 class="fs-24 mb-6">{{ 'customer.login.title' | t }}</h3>
            {% form 'customer_login' %}
              {%- if form.errors -%}
              	<p>{{ form.errors | default_errors }}</p>
              {%- endif -%}
              <div class="form-group mb-4">
                <label for="exampleInputEmail1" class="sr-only">{{ 'customer.login.email' | t }}</label>
                <input class="form-control" type="email" name="customer[email]"  placeholder="{{ 'customer.login.email' | t }}" required>
              </div>
              <div class="form-group mb-3">
                <label for="exampleInputPassword1" class="sr-only">{{ 'customer.login.password' | t }}</label>
                <input class="form-control" type="password" name="customer[password]"  placeholder="{{ 'customer.login.password' | t }}" required>
              </div>
            {% if form.password_needed %}
              <a href="/pages/password-recovery" class="d-inline-block fs-15 border-bottom border-2x lh-12 mb-5 border-secondary border-hover-primary">Forgot your password?</a>
            {% endif %}
              <button type="submit" class="btn btn-primary btn-block mb-3">{{ 'customer.login.sign_in' | t }}</button>
