            {% endform %}
          </div>
          <div class="col-lg-6 pl-lg-6 pl-xl-12">
            <h3 class="fs-24 mb-3">{{ section.settings.title }}</h3>
            <p class="mb-6">{{ section.settings.text }}</p>
            <a href="{{ routes.account_register_url }}" class="btn btn-primary">Register</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Section login",
    "settings": [
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default" : "New Customer"
        },
		{
          "type": "html",
          "id": "text",
          "label": "text",
		  "default" : "By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more."
