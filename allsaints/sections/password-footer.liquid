          {% if section.settings.show_share_buttons %}<ul class="list-inline text-lg-right mb-2">{% include 'social-sharing' %}</ul>{% endif %}
          <p class="mb-0 text-gray text-lg-right font-weight-500">
            {{ section.settings.copyright }}
          </p>
      	   <p class="mb-0 text-gray text-lg-right font-weight-500"> <small>{{ powered_by_link }}</small></p>
      </div>
    </div>
  </div>
</footer>


