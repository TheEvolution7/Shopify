    <div class="row"> 
      <div class="col-lg mb-6 mb-lg-0"> 
        <a href="{{ routes.root_url }}" class="footer-logo d-block"><img src="{{ section.settings.logo | img_url : 'medium' }}" alt="{{ section.settings.logo.alt | default: shop.name }}"></a>
