{% if section.settings.show_section %}
  <section class="py-10 border-top" data-section-id="{{ section.id }}">
    <div class="container">
      <div class="row">
      {% for block in section.blocks %}
        <div class="col-md-4 mb-6 mb-md-0">
          <div class="media border-md-right justify-content-center align-items-center">
            <div class="w-52px mr-5">
              <img src="{{ block.settings.image | img_url : 'medium' }}" alt="{{ block.settings.title }}">
            </div>
            <div class="media-body flex-unset">
              <h3 class="fs-20 mb-1">{{ block.settings.title }}</h3>
              <p class="mb-0 font-weight-500 fs-15">{{ block.settings.subheading }}</p>
            </div>
          </div>
        </div>
      {% endfor  %}  
      </div>
    </div>
  </section>
{% endif %}
{% schema %}
  {
    "name": "Section Icon",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        }	
	],
	"blocks": [
    {
      "type": "content",
      "name": "content",
      "settings": [
		{
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title"
        },
		{
          "type": "text",
          "id": "subheading",
          "label": "Subheading"
        }
      ]
    }
  ]
  }
{% endschema %}