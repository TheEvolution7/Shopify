<!-- /snippets/social-sharing.liquid -->
  {% if settings.share_pinterest %}
  	<li class="list-inline-item mr-4"><a href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" class="fs-20 lh-1">{% include 'icon-pinterest' %}</a></li>
  {% endif %}
  {% if settings.share_facebook %}
  	<li class="list-inline-item mr-4"><a href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" class="fs-20 lh-1">{% include 'icon-facebook' %}</a></li>
  {% endif %}
  	<li class="list-inline-item mr-4"><a href="//www.instagram.com/sharer.php?u={{ shop.url | append: share_permalink }}" class="fs-20 lh-1">{% include 'icon-instagram' %}</a></li>
  {% if settings.share_twitter %}
  	<li class="list-inline-item"><a href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" class="fs-20 lh-1">{% include 'icon-twitter' %}</a></li>
  {% endif %}
