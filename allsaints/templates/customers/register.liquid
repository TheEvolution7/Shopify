{% include 'breadcrumb' %}
<section class="pb-11 pb-lg-15 pt-10">
  <div class="container">
    <h2 class="fs-sm-40 mb-10 text-center">{{ 'customer.register.title' | t }}</h2>
    <div class="row no-gutters">
      <div class="col-lg-8 mx-auto">
        {%- assign formId = 'RegisterForm' -%}
        {% form 'create_customer', id: formId %}
          <div class="row mb-7">
            <div class="col-md-6">
              <label for="first-name" class="mb-2 text-primary font-weight-500">{{ 'customer.register.first_name' | t }} <abbr class="text-danger text-decoration-none" title="required">*</abbr></label>
              <input class="form-control" type="text" name="customer[first_name]" id="{{ formId }}-FirstName" placeholder="{{ 'customer.register.first_name' | t }}" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} required>
            </div>
            <div class="col-md-6">
              <label for="last-name" class="mb-2 text-primary font-weight-500">{{ 'customer.register.last_name' | t }} <abbr class="text-danger text-decoration-none" title="required">*</abbr></label>
              <input class="form-control" type="text" name="customer[last_name]" id="{{ formId }}-LastName" placeholder="{{ 'customer.register.last_name' | t }}" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} required>
            </div>
          </div>
          	<div class="form-group mb-7">
              <label for="email" class="mb-2 text-primary font-weight-500">{{ 'customer.register.email' | t }} <abbr class="text-danger text-decoration-none" title="required">*</abbr></label> 
              <input class="form-control" type="email" name="customer[email]" id="{{ formId }}-email" placeholder="{{ 'customer.register.email' | t }}" {% if form.email %} value="{{ form.email }}"{% endif %} required>
            </div>
            <div class="form-group mb-7">
              <label for="password" class="mb-2 text-primary font-weight-500">{{ 'customer.register.password' | t }} <abbr class="text-danger text-decoration-none" title="required">*</abbr></label>
              <input class="form-control" type="password" placeholder="{{ 'customer.register.password' | t }}" name="customer[password]" id="{{ formId }}-password" required>
            </div>
          <button type="submit" class="btn btn-primary btn-block mb-3">{{ 'customer.register.submit' | t }}</button>
        {% endform %}
          </div>
      </div>
    </div>
  </div>
</section>
  