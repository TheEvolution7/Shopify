
<div class="breadcrumb-area breadcrumb-style-1" style="background-image: url({{ section.settings.bg | img_url : 'master' }});" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row custom-gutter">
      <div class="col-lg-12">
        <div class="breadcrumb-inner text-center">
          <h1 class="page-title">{{ page_title }}</h1>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="contact-us-area">
  <div class="container">
    <div class="row custom-gutter">
      <div class="col-lg-6">
        <div class="contact-us-info margin-bottom-120 mobile-mb-50 tab-mb-40">
          <div class="section-title-area section-title-width ">
            <div class="section-title section-title-2">

              <div class="title-text">
                <h2 class="title">{{ section.settings.title }}</h2>
              </div>
            </div>
            {{ section.settings.subtitle }}
          </div>
          <div class="contact-address">
            <ul>
              <li>{{ section.settings.phone }}</li>
              <li>{{ section.settings.address }}</li>
              <li>{{ section.settings.email }}</li>
            </ul>
          </div>
          <div class="social_share">
            <ul>
              {%- assign socials = "Facebook Twitter Pinterest Instagram Tumblr Snapchat YouTube Vimeo" | split: ' ' -%}
              {%- for social in socials -%}
                {%- assign social_link = social | prepend: 'social_' | append: '_link' | downcase -%}
                {%- assign icon_link = social | prepend: 'icon-' | downcase -%}
                {%- if settings[social_link] != blank -%}
                	<li><a href="{{ settings[social_link] | escape }}" target="_blank">{%- include icon_link -%}</a></li>
                {%- endif -%}
              {%- endfor -%}   
            </ul>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="google-map-area mobile-mb-50 tab-mb-80 ">

          <div class="google-map-inner">
            {{ section.settings.map }}
          </div>

        </div>
      </div>
      <div class="col-lg-6">
        <div class="contact-form-area margin-bottom-115 mobile-mb-50 tab-mb-80">
          <div class="section-title-area  section-title-width">
            <div class="section-title section-title-2">

              <div class="title-text">
                <h2 class="title">{{ section.settings.title_2 }}</h2>
              </div>
            </div>
            {{ section.settings.subtitle_2 }}
          </div>
          {%- assign  formId = 'ContactForm' -%}
          {% form 'contact', id: formId, class : 'contact-form-box' %} 
            {%- if form.posted_successfully? -%}
            	<p>{{ 'contact.form.post_success' | t }}</p>
            {%- endif -%}
            <div class="row">
              <div class="col-lg-6">
                <label>First name*</label>
                <input type="text" id="{{ formId }}-first-name" name="contact[first_name]"  placeholder="Rumaisa" required>
              </div>
              <div class="col-lg-6">
                <label>Last name*</label>
                <input type="text" id="{{ formId }}-first-name" name="contact[last_name]"  placeholder="Adam" required>
              </div>
              <div class="col-lg-12">
                <label>Email address*</label>
                <input type="text"  id="{{ formId }}-email" name="contact[email]"  placeholder="hello@gmail.com" required>
                <label>Insert message</label>
                <textarea  id="{{ formId }}-message" placeholder="" name="contact[{{ 'contact.form.message' | t }}]"></textarea>
                <div class="btn-wrapper">
                  <button class="boxed-btn btn-rounded" type="submit">Send message</button>
                </div>
                <p class="form-messege mb-0"></p>
              </div>
            </div>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>
