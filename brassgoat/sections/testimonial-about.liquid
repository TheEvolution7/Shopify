{% if section.settings.show_section %}
  <div class="bloom-testimonial-area testimonial-style-one margin-bottom-108 mobile-mb-40 tab-mb-70" data-section-id="{{ section.id }}">
    <div class="container">
      <div class="row custom-gutter">
        <div class="col-lg-10 offset-lg-1">
          <div class="section-title-area text-center">
            <div class="section-title section-title-2 wow fadeIn">
              <div class="title-text">
                <h2 class="title">{{ section.settings.title }}</h2>
              </div>
            </div>
          </div>
          <div class="slider-for-testimonial wow fadeIn">
            <!-- testimonial-item -->
            {% for block in section.blocks  %}
              <div class="testimonial-item text-center">
                <div class="testimonial-brief">
                  <div class="testimonial-opinion">
                    {{ block.settings.subtitle }}
                  </div>
                </div>
              </div>
            {% endfor  %}
          </div>
          <div class="slider-nav-testimonial wow fadeIn">
            {% for block in section.blocks  %}
              <div class="item">
                <div class="testimonial-nav-item">
                  <div class="thumb-img">
                    <img src="{{ block.settings.image | img_url : 'medium' }}" alt="{{ block.settings.image.alt | default : block.settings.title }}">
                  </div>
                  <div class="desc">
                    <h5>{{ block.settings.title }}</h5>
                  </div>
                </div>
              </div>
            {% endfor  %} 
          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}
{% schema %}
  {
    "name": "Section Testimonials",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_section",
          "label": "Show section",
          "default": true
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default" : "Client Testimonials"
        }
	],
	"blocks": [
    {
      "type": "content",
      "name": "content",
      "settings": [
		{
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title"
		  
        },
		{
          "type": "richtext",
          "id": "subtitle",
          "label": "SubTitle",
		  "default" : "<p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Nihil quidem eius ratione atque ullam culpa explicabo eaque blanditiis temporibus unde animi libero illo praesentium quae neque, molestiae nemo quod sapiente.</p>"
        }
      ]
    }
  ]
  }
{% endschema %}
