<div class="search-popup" id="search-popup">
  <form action="{{ routes.search_url }}" method="get" role="search" class="search-form">
    <div class="form-group">
      <input type="text" class="form-control" id="keyword" name="q" placeholder="{{ 'general.search.placeholder' | t }}" value="{{ search.terms | escape }}">
      <input type="hidden" name="type" value="product" aria-hidden="true" />
      <input type="hidden" name="options[prefix]" value="last" aria-hidden="true" />
    </div>
    <button type="submit" class="submit-btn">{% include 'icon-search' %}</button>
  </form>
</div>